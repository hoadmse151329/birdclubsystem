@model dynamic
@{
    ViewData["Title"] = "Member Birds Page";
    BAL.ViewModels.BirdViewModel detailsBird = Model.MemberBirds;
    BAL.ViewModels.BirdViewModel updateBird = Model.UpdateBird != null ? Model.UpdateBird : new BAL.ViewModels.BirdViewModel();
    List<SelectListItem> birdStatus = Model.SelectListStatus;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="~/images/Red_whiskered_bulbul_bird_logo_eps_10_generated 1.png">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
    <!--Boxicons-->
    <link rel='stylesheet' href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css'>
    <!-- FONT AWESOME -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" />
    <link rel='stylesheet prefetch' href='https://netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css'>
    <!-- main CSS -->
    <link rel="stylesheet" href="~/css/main.css">
</head>
<body>
    <hr>
    <div class="header__breadcrumb container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")" class="text-decoration-none">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Member Birds</li>
            </ol>
        </nav>
    </div>
    <hr>

    <div class="profile container">
        <div class="row">
            <div class="navigation col-2" style="background:white">
                <ul class="slide-menu" style="background-color:white">
                    <li>
                        <a href="@Url.Action("MemberProfile", "Member")">
                            <span><i class="bx bx-user"></i></span>
                            <span class="title">Account</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("MemberHistoryEvent", "Member")">
                            <span><i class="bx bx-history"></i></span>
                            <span class="title">Registered Event</span>
                        </a>
                    </li>
                    <li class="active">
                        <a href="@Url.Action("MemberBird", "Member")">
                            <span><i class="bx bx-history"></i></span>
                            <span class="title">Bird</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("MemberPayment", "Member")">
                            <span><i class="bx bx-history"></i></span>
                            <span class="title">Payment</span>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="row">
                <div class="col-7 customer-booking">
                    <div class="row">
                        <div class="card profile col-12 mb-4">
                            <div class="card-header">
                                <h4>Meeting Information</h4>
                                <div class="edit-info">
                                    <i class='bx bxs-edit-alt' data-toggle="modal" data-target="#editbird"></i>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-5 text-sm-right">
                                        <span>Status:</span>
                                    </div>
                                    <div class="col-sm-7">
                                        @{
                                            switch (detailsBird.Status)
                                            {
                                                case "Active":
                                                    {
                                                        <span class="stt1" style="float: left;">Status:<h6>@detailsBird.Status</h6></span>
                                                        break;
                                                    }
                                                case "Injured":
                                                    {
                                                        <span class="stt3" style="float: left;">Status:<h6>@detailsBird.Status</h6></span>
                                                        break;
                                                    }
                                                case "Inactive":
                                                    {
                                                        <span class="stt2" style="float: left;">Status:<h6>@detailsBird.Status</h6></span>
                                                        break;
                                                    }
                                            }
                                        }
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-5 text-md-right">
                                        <label for="meeting-name">Bird Name:</label>
                                    </div>
                                    <div class="col-md-7">
                                        <span>@detailsBird.BirdName</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-5 text-md-right">
                                        <label for="customer-name">Added Date:</label>
                                    </div>
                                    <div class="col-md-7">
                                        <span>@detailsBird.AddDate.ToString("dd-MM-yyyy HH:mm")</span>
                                    </div>
                                </div>
                                <div class="row mb-sm-2">
                                    <div class="col-sm-5 text-sm-right">
                                        <span>ELO:</span>
                                    </div>
                                    <div class="col-sm-7 text-sm-left">
                                        <span>@detailsBird.Elo</span>
                                    </div>
                                </div>
                                <div class="row mb-sm-2">
                                    <div class="col-sm-5 text-sm-right">
                                        <span>Age:</span>
                                    </div>
                                    <div class="col-sm-7 text-sm-left">
                                        <span>@detailsBird.Age</span>
                                    </div>
                                </div>
                                <div class="row mb-sm-2">
                                    <div class="col-sm-5 text-sm-right">
                                        <span>Color:</span>
                                    </div>
                                    <div class="col-sm-7 text-sm-left">
                                        <span>@detailsBird.Color</span>
                                    </div>
                                </div>
                                <div class="row mb-sm-2">
                                    <div class="col-sm-5 text-sm-right">
                                        <span>Description:</span>
                                    </div>
                                    <div class="col-sm-7 text-sm-left">
                                        <span>@detailsBird.Description</span>
                                    </div>
                                </div>
                                <div class="row mb-sm-2">
                                    <div class="col-sm-5 text-sm-right">
                                        <span>Origin:</span>
                                    </div>
                                    <div class="col-sm-7 text-sm-left">
                                        <span>@detailsBird.Origin</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="card profile col-12 mb-4">
                            <div class="card-header">
                                <h4>Medias</h4>
                                <div class="edit-info">
                                    <i class='bx bxs-edit-alt' data-toggle="modal" data-target="#editbird"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- edit Bird -->
    <div id="editbird" class="modal fade" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="content">
            <div class="modal-content modal-addRoom">
                <div class="modal-header">
                    <h4 class="modal-title">Edit Meeting</h4>
                </div>
                <form asp-action="MemberUpdateBirdDetail" asp-controller="Member" method="post" asp-route-id="@detailsBird.BirdId" class="form-group">
                    <div class="modal-body">
                        <div class="row justify-content-center">
                            <div class="col-12 col-md-6">
                                <div class="form-group row">
                                    <label asp-for="@updateBird.BirdName" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input asp-for="@updateBird.BirdName" type="text"
                                               value="@updateBird.BirdName" class="form-control" required>
                                        <span asp-validation-for="@updateBird.BirdName" id="error_message"
                                              class="helper-text text-danger d-block offset-md-5 col-md-5 col-sm-8 mt-2"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group row">
                                    <label asp-for="@updateBird.Elo" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input asp-for="@updateBird.Elo" type="number"
                                               value="@updateBird.Elo" class="form-control" required>
                                        <span asp-validation-for="@updateBird.Elo" id="error_message"
                                              class="helper-text text-danger d-block offset-md-5 col-md-5 col-sm-8 mt-2"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="@updateBird.Age" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input asp-for="@updateBird.Age" type="text"
                                               value="@updateBird.Age" class="form-control" required>
                                        <span asp-validation-for="@updateBird.Age" id="error_message"
                                              class="helper-text text-danger d-block offset-md-5 col-md-5 col-sm-8 mt-2"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="@updateBird.Color" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <input asp-for="@updateBird.Color" type="text"
                                               value="@updateBird.Color" class="form-control" required>
                                        <span asp-validation-for="@updateBird.Color" id="error_message"
                                              class="helper-text text-danger d-block offset-md-5 col-md-5 col-sm-8 mt-2"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="@updateBird.Status" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <select class="form-control" asp-for="@updateBird.Status" asp-items="@birdStatus" class="custom-select" required></select>
                                        <span asp-validation-for="@updateBird.Status" id="error_message"
                                              class="helper-text text-danger d-block offset-md-5 col-md-5 col-sm-8 mt-2"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="@updateBird.Description" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <textarea asp-for="@updateBird.Description" type="text"
                                          value="@updateBird.Description" class="form-control" required></textarea>
                                <span asp-validation-for="@updateBird.Description" id="error_message"
                                      class="helper-text text-danger d-block offset-md-5 col-md-5 col-sm-8 mt-2"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="@updateBird.Origin" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <textarea asp-for="@updateBird.Origin" type="text"
                                          value="@updateBird.Origin" class="form-control" required></textarea>
                                <span asp-validation-for="@updateBird.Origin" id="error_message"
                                      class="helper-text text-danger d-block offset-md-5 col-md-5 col-sm-8 mt-2"></span>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer justify-content-center">
                        <button class="btn btn-success" type="submit" value="Update">Save</button>
                        <button class="btn btn-danger" type="button" data-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>