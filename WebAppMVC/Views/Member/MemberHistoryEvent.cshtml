                                                                                <label class="star star-4" for="star-4"></label>
                                                                                <input class="star star-3" id="star-3" type="radio" name="rating" value="3" data-default="3"/>
                                                                                <label class="star star-3" for="star-3"></label>
                                                                                <input class="star star-2" id="star-2" type="radio" name="rating" value="2" data-default="2"/>
                                                                                <label class="star star-2" for="star-2"></label>
                                                                                <input class="star star-1" id="star-1" type="radio" name="rating" value="1" data-default="1"/>
                                                                                <label class="star star-1" for="star-1"></label>
                                                                            </div>
                                                                            @*</fieldset>*@
