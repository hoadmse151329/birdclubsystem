@model dynamic
@{
    ViewData["Title"] = "Member History Event Page";
    List<BAL.ViewModels.Event.GetEventParticipation> events = Model.RegisteredEvents;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="~/images/Red_whiskered_bulbul_bird_logo_eps_10_generated 1.png">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
        <!--Boxicons-->
        <link rel='stylesheet' href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css'>
        <!-- FONT AWESOME -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" />
        <link rel='stylesheet prefetch' href='https://netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css'>
        <!-- main CSS -->
    <link rel="stylesheet" href="~/css/main.css">
</head>
<body>

    <hr>
    <div class="header__breadcrumb container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")" class="text-decoration-none">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Member Profile</li>

            </ol>
        </nav>
    </div>
    <hr>

    <div class="profile container">
        <div class="row">
            <div class="navigation col-2" style="background:white">
                <ul class="slide-menu" style="background-color:white">
                    <li>
                        <a
                            href="@Url.Action("MemberProfile", "Member")">
                            <span><i class="bx bx-user"></i></span>
                            <span class="title">Account</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("MemberHistoryEvent", "Member")">
                            <span><i class="bx bx-history"></i></span>
                            <span class="title">Registered Event</span>
                        </a>
                    </li>
                    <li class="active">
                        <a href="@Url.Action("MemberBird", "Member")">
                            <span><i class="bx bx-history"></i></span>
                            <span class="title">Bird</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("MemberPayment", "Member", new { id = Model.UserId})">
                            <span><i class="bx bx-history"></i></span>
                            <span class="title">Payment</span>
                        </a>
                    </li>
                </ul>
            </div>

            <div class="main-content col-10 p-0">
                <div class="main">
                    <div class="container-fluid">
                        <section>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="table-responsive">
                                                <!--Report-->
                                                <div id="report" class="modal fade" role="dialog">
                                                    <div class="modal-dialog modal-dialog-centered modal-lg"
                                                        role="document">
                                                        <div class="modal-content modal-addRoom">
                                                            <div class="modal-header">
                                                                <h4 class="modal-title">Report</h4>
                                                                <button type="button" class="close" data-dismiss="modal"
                                                                    aria-label="Close">
                                                                    <span aria-hidden="true">&times;</span>
                                                                </button>
                                                            </div>
                                                            <form
                                                                action="@Url.Action("ManagerManageEvent", "Manager")">
                                                            </form>
                                                            <div class="modal-body">
                                                                <div class="row p-4">
                                                                    <div class="col-12">
                                                                            <input name="userID" value="1"
                                                                                style="display: none">
                                                                        <div class="row form-group">
                                                                            <label for="rating"
                                                                                class="col-md-3 col-form-label text-md-right">Title</label>
                                                                            <input type="text" name="title"
                                                                                placeholder="Title"
                                                                                class="col-md-7 form-control">
                                                                        </div>
                                                                        <div class="row form-group">
                                                                            <label for="rating"
                                                                                class="col-md-3 col-form-label text-md-right">Date</label>
                                                                            <input type="date" name="date"
                                                                                placeholder="Fee"
                                                                                class="col-md-7 form-control">
                                                                        </div>
                                                                        <div class="row form-group">
                                                                            <label for="desct"
                                                                                class="col-md-3 col-form-label text-md-right">Description</label>
                                                                            <textarea type="text"
                                                                                placeholder="Describe..."
                                                                                required=""
                                                                                class="form-control col-md-7" rows="3"
                                                                                name="desct"></textarea>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer justify-content-center">
                                                                    <button
                                                                        class="button--primary bg-success text-white"
                                                                        type="submit" name="action" value="report">Report</button>
                                                                    <button class="button--primary bg-danger text-white"
                                                                        type="button" data-dismiss="modal">Cancel</button>
                                                                </div>
                                                            </div>

                                                        </div>
                                                    </div>
                                                </div>
                                                <!--End of Report-->
                                                <div id="history-table_wrapper" class="dataTables_wrapper no-footer">
                                                    <table id="history-table"
                                                        class="table table-striped table-bordered dataTable no-footer"
                                                        aria-describedby="history-table_info">
                                                        <thead>
                                                            <tr>
                                                                <th class="sorting sorting_asc" tabindex="0"
                                                                    aria-controls="history-table" rowspan="1"
                                                                    colspan="1" aria-sort="ascending"
                                                                    aria-label="Event ID: activate to sort column descending">
                                                                    Event ID</th>
                                                                <th class="sorting" tabindex="0"
                                                                    aria-controls="history-table" rowspan="1"
                                                                    colspan="1"
                                                                    aria-label="Event Name: activate to sort column ascending">
                                                                    Event Name</th>
                                                                <th class="sorting" tabindex="0"
                                                                    aria-controls="history-table" rowspan="1"
                                                                    colspan="1"
                                                                    aria-label="Event Name: activate to sort column ascending">
                                                                    Event Type</th>
                                                                <th class="sorting" tabindex="0"
                                                                    aria-controls="history-table" rowspan="1"
                                                                    colspan="1"
                                                                    aria-label="Date: activate to sort column ascending">
                                                                    Registration Deadline</th>
                                                                <th class="sorting" tabindex="0"
                                                                    aria-controls="history-table" rowspan="1"
                                                                    colspan="1"
                                                                    aria-label="Date: activate to sort column ascending">
                                                                    Start Date</th>
                                                                <th class="sorting" tabindex="0"
                                                                    aria-controls="history-table" rowspan="1"
                                                                    colspan="1"
                                                                    aria-label="Date: activate to sort column ascending">
                                                                    End Date</th>
                                                                <th class="sorting" tabindex="0"
                                                                    aria-controls="history-table" rowspan="1"
                                                                    colspan="1"
                                                                    aria-label="Date: activate to sort column ascending">
                                                                    Participation No</th>
                                                                <th class="sorting" tabindex="0"
                                                                    aria-controls="history-table" rowspan="1"
                                                                    colspan="1"
                                                                    aria-label="Fee: activate to sort column ascending">
                                                                    Fee</th>
                                                                <th class="sorting" tabindex="0"
                                                                    aria-controls="history-table" rowspan="1"
                                                                    colspan="1"
                                                                    aria-label="Tình trạng: activate to sort column ascending">
                                                                    Status</th>
                                                                <th class="sorting" tabindex="0"
                                                                    aria-controls="history-table" rowspan="1"
                                                                    colspan="1"
                                                                    aria-label="Action: activate to sort column ascending">
                                                                    Options</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @for(int i = 0; i < events.Count(); i++)
                                                            {
                                                                <tr class="@("clickable-row "+ (i%2 == 0 ? "even" : "odd")) " data-href="#"
                                                                data-bs-toggle="tooltip" data-bs-placement="right"
                                                                title="More Details">
                                                                    <td class="sorting_1">@events[i].EventId</td>
                                                                    <td>@events[i].EventName</td>
                                                                    <td>@events[i].EventType</td>
                                                                    <td>@events[i].RegistrationDeadline</td>
                                                                    <td>@events[i].StartDate</td>
                                                                    <td>@events[i].EndDate</td>
                                                                    <td>@events[i].ParticipationNo</td>
                                                                    <td>@events[i].Fee</td>
                                                                    <td>@events[i].Status</td>
                                                                    <td>
                                                                        <div class="d-flex justify-content-around">
                                                                            <!--<a href="UserManager?action=feedback?userId=hai03&motelID=785146827" class="btn btn-info m-b-xs shadow btn-xs sharp me-1" data-bs-toggle="tooltip">Đánh giá</a>-->
                                                                            <div class="rating-room">
                                                                                <a class="button--primary btn-info bg-info shadow btn-xs text-white"
                                                                                href="@Url.Action(events[i].EventType + "Post", events[i].EventType,new {id = events[i].EventId})">Details</a>
                                                                            </div>
                                                                            @switch (events[i].Status)
                                                                            {
                                                                                case "Preparing":
                                                                                    {
                                                                                        <form asp-action="@(events[i].EventType)Deregister" asp-controller="@events[i].EventType" method="post" asp-route-meetingId="@events[i].EventId">
                                                                                            <div class="report-room">
                                                                                                <button class="button--primary btn-danger bg-danger shadow btn-xs text-white" type="submit">Sign Out</button>
                                                                                            </div>
                                                                                        </form>
                                                                                        break;
                                                                                    }
                                                                                case "Open":
                                                                                case "OnGoing":
                                                                                    {
                                                                                        <form asp-action="@(events[i].EventType)Deregister" asp-controller="@events[i].EventType" method="post" asp-route-meetingId="@events[i].EventId">
                                                                                            <div class="report-room">
                                                                                                <button class="button--primary btn-danger bg-danger shadow btn-xs text-white" type="submit">Sign Out</button>
                                                                                            </div>
                                                                                        </form>
                                                                                        break;
                                                                                    }
                                                                                case "Ended":
                                                                                    {
                                                                                        <div class="report-room">
                                                                                            <button data-toggle="modal"
                                                                                                data-target="#report"
                                                                                                class="button--primary btn-danger shadow btn-xs sharp text-white bg-danger">
                                                                                                <span>Report</span>
                                                                                            </button>
                                                                                        </div>
                                                                                        break;
                                                                                    }
                                                                                case "Cancelled":
                                                                                    {
                                                                                        <div class="report-room">
                                                                                            <button data-toggle="modal"
                                                                                                    data-target="#report"
                                                                                                    class="button--primary btn-danger shadow btn-xs sharp text-white bg-danger">
                                                                                                <span>Report</span>
                                                                                            </button>
                                                                                        </div>
                                                                                        break;
                                                                                    }
                                                                            }
                                                                        </div>


                                                                    </td>
                                                                    <!-- feedback -->
                                                                    <!-- end feedback -->
                                                                    <!-- Report -->
                                                                    <!-- end Report -->
                                                                    <!-- feedback form -->
                                                                </tr>
                                                            }
                                                            

                                                            @*<tr class="clickable-row even" data-href="#"
                                                                data-bs-toggle="tooltip" data-bs-placement="right"
                                                                title="More Details">
                                                                <td class="sorting_1">Contest06</td>
                                                                <td>Red-whiskered Bulbul Singing Showdown</td>
                                                                <td>2023-10-15 </td>
                                                                <td>200000</td>


                                                                <td>Canceled</td>
                                                                <td>
                                                                    <div class="d-flex justify-content-around">
                                                                        <a href="@Url.Action("MeetingPost", "Meeting")"
                                                                            class="button--primary bg-primary text-white clickable-row">Review Event</a>
                                                                    </div>
                                                                </td>

                                                                <!-- feedback form -->
                                                            </tr>*@

                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /# card -->
                                </div>
                                <!-- /# column -->
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <!-- <script src="~/js/owner-script.js"></script> -->

    <script src="~/js/user-script.js"></script>
   <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js"></script>
        <script src="~/js/user-script.js"></script>
        <script src="~/js/owner-script.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
        referrerpolicy="no-referrer"></script>
        <!-- Jquery Waypoint -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/waypoints/4.0.1/jquery.waypoints.min.js"></script>
        <!-- BS4 carousels -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <!-- main js -->
</body>
</html>