@model dynamic
@{
    List<BAL.ViewModels.NotificationViewModel>? notifications = Model.MemberNotifications;
}

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="~/images/Red_whiskered_bulbul_bird_logo_eps_10_generated 1.png">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css">
</head>
<body>
    <hr>
    <div class="header__breadcrumb container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")" class="text-decoration-none">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Member Notifications</li>

            </ol>
        </nav>
    </div>
    <hr>

    <div class="profile container">
        <div class="row">
            <div class="navigation col-2" style="background:white">
                <ul class="slide-menu" style="background-color:white">
                    <li>
                        <a href="@Url.Action("MemberProfile", "Member")">
                            <span><i class="bx bx-user"></i></span>
                            <span class="title">Account</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("MemberHistoryEvent", "Member")">
                            <span><i class="bx bx-history"></i></span>
                            <span class="title">Registered Event</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("MemberBird", "Member")">
                            <span><i class="bx bx-history"></i></span>
                            <span class="title">Bird</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("MemberPayment", "Member")">
                            <span><i class="bx bx-history"></i></span>
                            <span class="title">Payment</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("MemberNotification", "Member")">
                            <span><i class="bx bx-history"></i></span>
                            <span class="title">Notifications</span>
                        </a>
                    </li>
                </ul>
            </div>

            <div class="main-content col-10 p-0">
                <div class="main">
                    <div class="container-fluid">
                        <section>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="table-responsive">
                                                <!--Report-->
                                                <div id="report" class="modal fade" role="dialog">
                                                    <div class="modal-dialog modal-dialog-centered modal-lg"
                                                         role="document">
                                                        <div class="modal-content modal-addRoom">
                                                            <div class="modal-header">
                                                                <h4 class="modal-title">Report</h4>
                                                                <button type="button" class="close" data-dismiss="modal"
                                                                        aria-label="Close">
                                                                    <span aria-hidden="true">&times;</span>
                                                                </button>
                                                            </div>
                                                            <form action="@Url.Action("ManagerManageEvent", "Manager")">
                                                            </form>
                                                            <div class="modal-body">
                                                                <div class="row p-4">
                                                                    <div class="col-12">
                                                                        <input name="userID" value="1"
                                                                               style="display: none">
                                                                        <div class="row form-group">
                                                                            <label for="rating"
                                                                                   class="col-md-3 col-form-label text-md-right">Title</label>
                                                                            <input type="text" name="title"
                                                                                   placeholder="Title"
                                                                                   class="col-md-7 form-control">
                                                                        </div>
                                                                        <div class="row form-group">
                                                                            <label for="rating"
                                                                                   class="col-md-3 col-form-label text-md-right">Date</label>
                                                                            <input type="date" name="date"
                                                                                   placeholder="Fee"
                                                                                   class="col-md-7 form-control">
                                                                        </div>
                                                                        <div class="row form-group">
                                                                            <label for="desct"
                                                                                   class="col-md-3 col-form-label text-md-right">Description</label>
                                                                            <textarea type="text"
                                                                                      placeholder="Describe..."
                                                                                      required=""
                                                                                      class="form-control col-md-7" rows="3"
                                                                                      name="desct"></textarea>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer justify-content-center">
                                                                    <button class="button--primary bg-success text-white"
                                                                            type="submit" name="action" value="report">
                                                                        Report
                                                                    </button>
                                                                    <button class="button--primary bg-danger text-white"
                                                                            type="button" data-dismiss="modal">
                                                                        Cancel
                                                                    </button>
                                                                </div>
                                                            </div>

                                                        </div>
                                                    </div>
                                                </div>
                                                <!--End of Report-->
                                                <div id="history-table_wrapper" class="dataTables_wrapper no-footer">
                                                    <table id="history-table"
                                                           class="table table-striped table-bordered dataTable no-footer"
                                                           aria-describedby="history-table_info">
                                                        <thead>
                                                            <tr>
                                                                <th class="sorting sorting_asc" tabindex="0"
                                                                    aria-controls="history-table" rowspan="1"
                                                                    colspan="1" aria-sort="ascending"
                                                                    aria-label="Notification: activate to sort column descending">
                                                                    Notification ID
                                                                </th>
                                                                <th class="sorting" tabindex="0"
                                                                    aria-controls="history-table" rowspan="1"
                                                                    colspan="1"
                                                                    aria-label="Title: activate to sort column ascending">
                                                                    Title
                                                                </th>
                                                                <th class="sorting" tabindex="0"
                                                                    aria-controls="history-table" rowspan="1"
                                                                    colspan="1"
                                                                    aria-label="Description: activate to sort column ascending">
                                                                    Description
                                                                </th>
                                                                <th class="sorting" tabindex="0"
                                                                    aria-controls="history-table" rowspan="1"
                                                                    colspan="1"
                                                                    aria-label="Date: activate to sort column ascending">
                                                                    Date
                                                                </th>
                                                                <th class="sorting" tabindex="0"
                                                                    aria-controls="history-table" rowspan="1"
                                                                    colspan="1"
                                                                    aria-label="Status: activate to sort column ascending">
                                                                    Status
                                                                </th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @for (int i = 0; i < notifications.Count(); i++)
                                                            {
                                                                <tr class="@("clickable-row "+ (i%2 == 0 ? "even" : "odd")) " data-href="#"
                                                                    data-bs-toggle="tooltip" data-bs-placement="right"
                                                                    title="More Details">
                                                                    <td class="sorting_1">@notifications[i].NotificationId</td>
                                                                    <td>@notifications[i].Title</td>
                                                                    <td>@notifications[i].Description</td>
                                                                    <td>@notifications[i].Date</td>
                                                                    <td>@notifications[i].Status</td>
                                                                    <!-- feedback -->
                                                                    <!-- end feedback -->
                                                                    <!-- Report -->
                                                                    <!-- end Report -->
                                                                    <!-- feedback form -->
                                                                </tr>
                                                            }


                                                            @*<tr class="clickable-row even" data-href="#"
                                                            data-bs-toggle="tooltip" data-bs-placement="right"
                                                            title="More Details">
                                                            <td class="sorting_1">Contest06</td>
                                                            <td>Red-whiskered Bulbul Singing Showdown</td>
                                                            <td>2023-10-15 </td>
                                                            <td>200000</td>


                                                            <td>Canceled</td>
                                                            <td>
                                                            <div class="d-flex justify-content-around">
                                                            <a href="@Url.Action("MeetingPost", "Meeting")"
                                                            class="button--primary bg-primary text-white clickable-row">Review Event</a>
                                                            </div>
                                                            </td>

                                                            <!-- feedback form -->
                                                            </tr>*@

                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /# card -->
                                </div>
                                <!-- /# column -->
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
<script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
</body>
</html>