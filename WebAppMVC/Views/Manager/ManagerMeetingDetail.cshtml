@{
    Layout = null;
    ViewData["Title"] = "Manager Meeting Detail Page";
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS -->
    <link rel="stylesheet" href="~/css/owner-style.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
    <!--Boxicons-->
    <link rel='stylesheet' href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css'>
    <!-- Other-->
    <link rel="stylesheet" href="https://unpkg.com/filepond-plugin-file-poster/dist/filepond-plugin-file-poster.css">
</head>
<body>
    <!-- sidebar -->
    <div class="sidebar">
        <div class="container">
            <div class="navigation">
                <ul class="slide-menu">
                    <div class="logo">
                        <a href="@Url.Action("ManagerIndex", "Manager")">
                            <img class="logo" src="~/images/Red_whiskered_bulbul_bird_logo_eps_10_generated 1.png" alt="logo">
                        </a>
                    </div>
                    <li class="active" data-toggle="tooltip" data-placement="right" title="Overview">
                        <a href="@Url.Action("ManagerIndex", "Manager")">
                            <span><i class='bx bx-tachometer'></i></span>
                            <span class="title">Overview</span>
                        </a>
                    </li>
                    <li>
                        <a href="#" data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                            <i class='bx bx-bookmarks'></i>
                            <span class="title">Manage</span>
                            <i class='bx bxs-chevron-down drop'></i>
                        </a>
                        <ul class="collapse sub-menu" id="collapseOne">
                            <li data-toggle="tooltip" data-placement="right" title="Manage Meeting">
                                <a href="@Url.Action("ManagerMeeting", "Manager")" li class="dropdown-item">
                                    <i class='bx bx-home-alt-2'></i>
                                    <span class="title">Meeting</span>
                                </a>
                            </li>
                            <li data-toggle="tooltip" data-placement="right" title="Manage Fieldtrip">
                                <a href="@Url.Action("ManagerFieldtrip", "Manager")" li class="dropdown-item">
                                    <i class='bx bx-calendar-edit'></i>
                                    <span class="title">Fieldtrip</span>
                                </a>
                            </li>
                            <li data-toggle="tooltip" data-placement="right" title="Manage Bird Contest">
                                <a href="@Url.Action("ManagerBirdContest", "Manager")" li class="dropdown-item">
                                    <i class='bx bx-cloud-rain'></i>
                                    <span class="title">Bird Contest</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li data-toggle="tooltip" data-placement="right" title="History Events">
                        <a href="@Url.Action("ManagerHistoryEvents", "Manager")">
                            <span><i class='bx bx-history'></i></span>
                            <span class="title">HistoryEvents</span>
                        </a>
                    </li>
                    <li data-toggle="tooltip" data-placement="right" title="Manage Notification">
                        <a href="@Url.Action("ManagerNotification", "Manager")">
                            <span><i class='bx bx-bell'></i></span>
                            <span class="title">Notification</span>
                        </a>
                    </li>
                    <li data-toggle="tooltip" data-placement="right" title="Manage Feedback">
                        <a href="@Url.Action("ManagerFeedback", "Manager")">
                            <span><i class="bx bx-detail"></i></span>
                            <span class="title">Feedback</span>
                        </a>
                    </li>
                    <li data-toggle="tooltip" data-placement="right" title="Manage Statical">
                        <a href="@Url.Action("ManagerStatical", "Manager")">
                            <span><i class='bx bx-line-chart'></i></span>
                            <span class="title">Statical</span>
                        </a>
                    </li>
                    <li data-toggle="tooltip" data-placement="right" title="Manager Profile">
                        <a href="@Url.Action("ManagerProfile", "Manager")">
                            <span><i class='bx bx-user'></i></span>
                            <span class="title">Manager Profile</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- End sidebar -->
    <!-- Header -->
    <div class="header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="toggle float-left">
                        <i class='bx bx-menu'></i>
                    </div>
                    <div class="float-left">
                        <div class="dashboard_bar d-flex">
                            Home
                        </div>
                    </div>
                    <div class="float-right">
                        <div class="btn-group me-1 mb-1">
                            <div class="dropdown">
                                <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Hồ Trần Khánh Duy
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="@Url.Action("ManagerProfile", "Manager")"><i class='bx bx-user'></i>Manager Profile</a> <!--thêm theo user id và role-->
                                    <a class="dropdown-item" href="@Url.Action("ManagerNotification", "Manager")"><i class='bx bx-bell'></i>Notification</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="@Url.Action("Logout", "Auth")"><i class='bx bx-log-out-circle'></i>Logout</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End header -->
    <!-- List room -->
    <div class="main-content">
        <div class="main">
            <div class="container-fluid">
                <div class="row">
                    <div class="offset-sm-6 col-sm-6  d-flex justify-content-sm-end p-md-0 mt-2 mt-sm-0 ">
                        <ol class="breadcrumb">
                            <li class="breadcrumd-item">
                                <a href="#">Manage</a>
                            </li>
                            <li class="breadcrumd-item">
                                <span>/</span>
                            </li>
                        </ol>
                    </div>
                </div>
                <div class="row">
                    <div class="col-7 customer-booking">
                        <div class="row">
                            <div class="card profile col-12 mb-4">
                                <div class="card-header">
                                    <h4>Meeting Status</h4>
                                </div>
                                <div class="card-body">
                                    <div class="row mb-sm-2">
                                        <div class="col-sm-5 text-sm-right">
                                            <span>Status:</span>
                                        </div>
                                        <div class="col-sm-7">
                                            <span class="destroy" style="float: left;">Processing</span>

                                            <!-- Trống in ra dòng dưới -->
                                            <!-- <span class="outcome" style="float: left;">Done</span> -->
                                            <!-- Đã cọc in ra dòng dưới -->
                                            <!-- <span class="approval" style="float: left;">Cancel</span> -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="card profile col-12 mb-4">
                                <div class="card-header">
                                    <h4>Meeting Information</h4>
                                    <div class="edit-info">
                                        <i class='bx bxs-edit-alt' data-toggle="modal" data-target="#editprofile"></i>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-5 text-md-right">
                                            <label for="meeting-name">Meeting Name:</label>
                                        </div>
                                        <div class="col-md-7">
                                            <span>Meeting 1</span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-5 text-md-right">
                                            <label for="customer-name">Registration Deadlines:</label>
                                        </div>
                                        <div class="col-md-7">
                                            <span>16/2/2024</span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-5 text-md-right">
                                            <label for="customer-name">Start Date:</label>
                                        </div>
                                        <div class="col-md-7">
                                            <span>26/1/2024</span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-5 text-md-right">
                                            <label for="customer-name">End Date:</label>
                                        </div>
                                        <div class="col-md-7">
                                            <span>16/2/2024</span>
                                        </div>
                                    </div>
                                    <div class="row mb-sm-2">
                                        <div class="col-sm-5 text-sm-right">
                                            <span>Number of participants:</span>
                                        </div>
                                        <div class="col-sm-7 text-sm-left">
                                            <span>30</span>
                                        </div>

                                    </div>
                                    <div class="row mb-sm-2">
                                        <div class="col-sm-5 text-sm-right">
                                            <span>Location:</span>
                                        </div>
                                        <div class="col-sm-7 text-sm-left">
                                            <span>111a,Hai Ba Trung</span>
                                        </div>
                                    </div>
                                    <div class="row mb-sm-2">
                                        <div class="col-sm-5 text-sm-right">
                                            <span>Description:</span>
                                        </div>
                                        <div class="col-sm-7 text-sm-left">
                                            <span>Annual Meeting</span>
                                        </div>
                                    </div>
                                    <div class="row mb-sm-2">
                                        <div class="col-sm-5 text-sm-right">
                                            <span>Note:</span>
                                        </div>
                                        <div class="col-sm-7 text-sm-left">
                                            <span>Bring your own food, we have free water</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-5 cardFB">
                        <div class="card border-0 d-flex">
                            <div class="card-header">
                                <h4>Participants</h4>
                            </div>
                            <div class="card-body">
                                <table class="table table-hover table-borderless">
                                    <thead>
                                        <tr>
                                            <th>Participant No:</th>
                                            <th>Name:</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>1</td>
                                            <td>Ho Tran Khanh Duy</td>
                                        </tr>
                                        <tr>
                                            <td>2</td>
                                            <td>Ho Tran Khanh Duy</td>
                                        </tr>
                                        <tr>
                                            <td>3</td>
                                            <td>Ho Tran Khanh Duy</td>
                                        </tr>
                                        <tr>
                                            <td>4</td>
                                            <td>Ho Tran Khanh Duy</td>
                                        </tr>
                                        <tr>
                                            <td>5</td>
                                            <td>Ho Tran Khanh Duy</td>
                                        </tr>
                                        <tr>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

    <!-- edit Room -->
    <div id="editprofile" class="modal fade" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="content">
            <div class="modal-content modal-addRoom">
                <div class="modal-header">
                    <h4 class="modal-title">Edit Meeting</h4>
                </div>
                <form action="#" class="form-group">
                    <div class="modal-body">
                        <div class="row justify-content-center">
                            <div class="col-12 col-md-6">
                                <div class="form-group row">
                                    <label for="meetingname" class="col-sm-4 col-form-label">Meeting Name:</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" value="Meeting 1" required>
                                    </div>
                                </div>
                                    <div class="form-group row">
                                        <label for="registrationdeadlines" class="col-sm-4 col-form-label">Registration Deadlines:</label>
                                        <div class="col-sm-8">
                                            <input type="date" class="form-control" value="16/2/2024" required>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="startdate" class="col-sm-4 col-form-label">Start date:</label>
                                        <div class="col-sm-8">
                                            <input type="date" class="form-control" value="26/1/2024" required>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="enddate" class="col-sm-4 col-form-label">End date:</label>
                                        <div class="col-sm-8">
                                            <input type="date" class="form-control" value="16/2/2024" required>
                                        </div>
                                    </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                    <div class="form-group row">
                                        <label for="numberofparticipants" class="col-sm-4 col-form-label">Number of participants</label>
                                        <div class="col-sm-8">
                                            <input type="number" class="form-control" value="30" required>
                                        </div>
                                    </div>
                                <div class="form-group row">
                                    <label for="address" class="col-sm-4 col-form-label">Location</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" value="111a,Hai Ba Trung" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="description" class="col-sm-4 col-form-label">Description</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" value="Annual Meeting" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="note" class="col-sm-4 col-form-label">Note</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" value="Bring your own food, we have free water" required>
                                    </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <div class="modal-footer justify-content-center">
                        <button class="btn btn-success" type="submit">Save</button>
                        <button class="btn btn-danger" type="button" data-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>


        <!-- jQuery first, then Popper.js, then Bootstrap JS. -->
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/lightgallery/2.5.0-beta.5/lightgallery.es5.min.js"></script>
        <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
        <script src="~/js/owner-script.js"></script>
</body>
</html>
