@model dynamic
@{
    Layout = null;
    ViewData["Title"] = "Manager Contest Detail Page";
    BAL.ViewModels.ContestViewModel details = Model.ContestDetails;
    List<BAL.ViewModels.ContestParticipantViewModel> parts = Model.ContestParticipants;
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS -->
    <link rel="stylesheet" href="~/css/owner-style.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
    <!--Boxicons-->
    <link rel='stylesheet' href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css'>
    <!-- Other-->
    <link rel="stylesheet" href="https://unpkg.com/filepond-plugin-file-poster/dist/filepond-plugin-file-poster.css">
</head>
<body>
    <!-- sidebar -->
    <div class="sidebar">
        <div class="container">
            <div class="navigation">
                <ul class="slide-menu">
                    <div class="logo">
                        <a href="@Url.Action("ManagerIndex", "Manager")">
                            <img class="logo" src="~/images/Red_whiskered_bulbul_bird_logo_eps_10_generated 1.png" alt="logo">
                        </a>
                    </div>
                    <li class="active" data-toggle="tooltip" data-placement="right" title="Overview">
                        <a href="@Url.Action("ManagerIndex", "Manager")">
                            <span><i class='bx bx-tachometer'></i></span>
                            <span class="title">Overview</span>
                        </a>
                    </li>
                    <li>
                        <a href="#" data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                            <i class='bx bx-bookmarks'></i>
                            <span class="title">Manage</span>
                            <i class='bx bxs-chevron-down drop'></i>
                        </a>
                        <ul class="collapse sub-menu" id="collapseOne">
                            <li data-toggle="tooltip"data-placement="right" title="Manage Meeting">
                                <a href="@Url.Action("Meeting", "Manager")" li class="dropdown-item">
                                    <i class='bx bx-home-alt-2'></i>
                                    <span class="title">Meeting</span>
                                </a>
                            </li>
                            <li data-toggle="tooltip" data-placement="right" title="Manage Fieldtrip">
                                <a href="@Url.Action("ManagerFieldtrip", "Manager")" li class="dropdown-item">
                                    <i class='bx bx-calendar-edit'></i>
                                    <span class="title">Fieldtrip</span>
                                </a>
                            </li>
                            <li data-toggle="tooltip" data-placement="right" title="Manage Bird Contest">
                                <a href="@Url.Action("ManagerContest", "Manager")" li class="dropdown-item">
                                    <i class='bx bx-cloud-rain'></i>
                                    <span class="title">Bird Contest</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li data-toggle="tooltip" data-placement="right" title="Manage Feedback">
                        <a href="@Url.Action("ManagerFeedback", "Manager")">
                            <span><i class="bx bx-detail"></i></span>
                            <span class="title">Feedback</span>
                        </a>
                    </li>
                    <li data-toggle="tooltip" data-placement="right" title="Manager Profile">
                        <a href="@Url.Action("ManagerProfile", "Manager")">
                            <span><i class='bx bx-user'></i></span>
                            <span class="title">Manager Profile</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- End sidebar -->
    <!-- Header -->
    <div class="header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="toggle float-left">
                        <i class='bx bx-menu'></i>
                    </div>
                    <div class="float-left">
                        <div class="dashboard_bar d-flex">
                            Home
                        </div>
                    </div>
                    <div class="float-right">
                        <div class="btn-group me-1 mb-1">
                             @if (TempData["ROLE_NAME"] != null)
                                    {
                                    <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @TempData["USER_NAME"]
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <a class="dropdown-item" href="@Url.Action("ManagerProfile", "Manager")"><i class='bx bx-user'></i>Manager Profile</a> <!--thêm theo user id và role-->
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="@Url.Action("Logout", "Auth")">Logout</a>
                                    </div>
                                    }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End header -->
    <!-- List room -->
    <div class="main-content">
        <div class="main">
            <div class="container-fluid">
                <div class="row">
                    <div class="offset-sm-6 col-sm-6  d-flex justify-content-sm-end p-md-0 mt-2 mt-sm-0 ">
                        <ol class="breadcrumb">
                            <li class="breadcrumd-item">
                                <a href="#">Manage</a>
                            </li>
                            <li class="breadcrumd-item">
                                <span>/</span>
                            </li>
                        </ol>
                    </div>
                </div>
                <div class="row">
                    <div class="col-7 customer-booking">
                        <div class="row">
                            <div class="card profile col-12 mb-4">
                                <div class="card-header">
                                    <h4>Contest Status</h4>
                                </div>
                                <div class="card-body">
                                    <div class="row mb-sm-2">
                                        <div class="col-sm-5 text-sm-right">
                                            <span>Status:</span>
                                        </div>
                                        <div class="col-sm-7">
                                            <span class="destroy" style="float: left;">@details.Status</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="card profile col-12 mb-4">
                                <div class="card-header">
                                    <h4>Meeting Information</h4>
                                    <div class="edit-info">
                                        <i class='bx bxs-edit-alt' data-toggle="modal" data-target="#editprofile"></i>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-5 text-md-right">
                                            <label for="meeting-name">Contest Name:</label>
                                        </div>
                                        <div class="col-md-7">
                                            <span>@details.ContestName</span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-5 text-md-right">
                                            <label for="customer-name">Registration Deadlines:</label>
                                        </div>
                                        <div class="col-md-7">
                                            <span>@details.RegistrationDeadline.Value.ToString("MM/dd/yyyy")</span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-5 text-md-right">
                                            <label for="customer-name">Start Date:</label>
                                        </div>
                                        <div class="col-md-7">
                                            <span>@details.StartDate.Value.ToString("MM/dd/yyyy")</span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-5 text-md-right">
                                            <label for="customer-name">End Date:</label>
                                        </div>
                                        <div class="col-md-7">
                                            <span>@details.EndDate.Value.ToString("MM/dd/yyyy")</span>
                                        </div>
                                    </div>
                                    <div class="row mb-sm-2">
                                        <div class="col-sm-5 text-sm-right">
                                            <span>Host:</span>
                                        </div>
                                        <div class="col-sm-7 text-sm-left">
                                            <span>@details.Host</span>
                                        </div>
                                    </div>
                                    <div class="row mb-sm-2">
                                        <div class="col-sm-5 text-sm-right">
                                            <span>Incharge:</span>
                                        </div>
                                        <div class="col-sm-7 text-sm-left">
                                            <span>@details.Incharge</span>
                                        </div>
                                    </div>
                                    <div class="row mb-sm-2">
                                        <div class="col-sm-5 text-sm-right">
                                            <span>Maximum Participations:</span>
                                        </div>
                                        <div class="col-sm-7 text-sm-left">
                                            <span>@details.NumberOfParticipantsLimit</span>
                                        </div>
                                    </div>
                                    <div class="row mb-sm-2">
                                        <div class="col-sm-5 text-sm-right">
                                            <span>Remaining Participant Slots:</span>
                                        </div>
                                        <div class="col-sm-7 text-sm-left">
                                            <span>@details.NumberOfParticipants</span>
                                        </div>
                                    </div>
                                    <div class="row mb-sm-2">
                                        <div class="col-sm-5 text-sm-right">
                                            <span>Location:</span>
                                        </div>
                                        <div class="col-sm-7 text-sm-left">
                                            <span>@details.AreaNumber,@details.Street,@details.District,@details.City</span>
                                        </div>
                                    </div>
                                    <div class="row mb-sm-2">
                                        <div class="col-sm-5 text-sm-right">
                                            <span>Description:</span>
                                        </div>
                                        <div class="col-sm-7 text-sm-left">
                                            <span>@details.Description</span>
                                        </div>
                                    </div>
                                    <div class="row mb-sm-2">
                                        <div class="col-sm-5 text-sm-right">
                                            <span>Note:</span>
                                        </div>
                                        <div class="col-sm-7 text-sm-left">
                                            <span>@details.Note</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-5 cardFB">
                        <div class="card border-0 d-flex">
                            <div class="card-header">
                                <h4>Participants</h4>
                            </div>
                            <div class="card-body">
                                <table class="table table-hover table-borderless">
                                    <thead>
                                        <tr>
                                            <th>Participant No:</th>
                                            <th>Name:</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var part in parts)
                                        {
                                            <tr>
                                                <td>@part.ParticipantNo</td>
                                                <td>@part.BirdId</td>
                                            </tr>
                                        }
                                        <tr>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- edit Room -->
    <div id="editprofile" class="modal fade" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="content">
            <div class="modal-content modal-addRoom">
                <div class="modal-header">
                    <h4 class="modal-title">Edit Contest</h4>
                </div>
                <form action="#" class="form-group">
                    <div class="modal-body">
                        <div class="row justify-content-center">
                            <div class="col-12 col-md-8">
                                <div class="form-group row">
                                    <label asp-for="@details.Address" class="col-sm-4 col-form-label">Location</label>
                                    <div class="col-sm-8">
                                        <input asp-for="@details.Address" id="Address" type="text" name="Address"
                                               value="@details.Address" class="form-control" required>
                                        <span asp-validation-for="@details.Address" id="error_message"
                                              class="helper-text text-danger d-block offset-md-5 col-md-5 col-sm-8 mt-2"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="@details.Description" class="col-sm-4 col-form-label">Description</label>
                                    <div class="col-sm-8">
                                        <input asp-for="@details.Description" id="Description" type="text" name="Description"
                                               value="@details.Description" class="form-control" required>
                                        <span asp-validation-for="@details.Description" id="error_message"
                                              class="helper-text text-danger d-block offset-md-5 col-md-5 col-sm-8 mt-2"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="@details.Note" class="col-sm-4 col-form-label">Note</label>
                                    <div class="col-sm-8">
                                        <input asp-for="@details.Note" id="Note" type="text" name="Note"
                                               value="@details.Note" class="form-control" required>
                                        <span asp-validation-for="@details.Note" id="error_message"
                                              class="helper-text text-danger d-block offset-md-5 col-md-5 col-sm-8 mt-2"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                <label asp-for="@details.Status" class="col-sm-4 col-form-label">Status:</label>
                                    <div class="col-sm-8">
                                    <input asp-for="@details.Status" id="Status" type="text" name="Status"
                                            value="@details.Status" class="form-control" required>
                                    <span asp-validation-for="@details.Status" id="error_message"
                                            class="helper-text text-danger d-block offset-md-5 col-md-5 col-sm-8 mt-2"></span>
                                    </div>
                                </div>
                                <input asp-for="@details.NumberOfParticipantsLimit" id="NumberOfParticipantsLimit" type="number" name="NumberOfParticipantsLimit"
                                       value="@details.NumberOfParticipantsLimit" class="form-control" required hidden>
                                <span asp-validation-for="@details.NumberOfParticipantsLimit" id="error_message"
                                      class="helper-text text-danger d-block offset-md-5 col-md-5 col-sm-8 mt-2"></span>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer justify-content-center">
                        <button class="btn btn-success" type="submit" value="Update">Save</button>
                        <button class="btn btn-danger" type="button" data-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>


        <!-- jQuery first, then Popper.js, then Bootstrap JS. -->
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/lightgallery/2.5.0-beta.5/lightgallery.es5.min.js"></script>
        <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
        <script src="~/js/owner-script.js"></script>
            <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
