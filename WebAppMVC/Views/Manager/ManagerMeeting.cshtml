                <label for="deadline" class="col-md-3 col-form-label mt-3 text-md-right">Registration Deadlines</label>
                <input type="datetime-local" name="registrationDeadline" class="form-control col-md-7 mt-3">

                <label for="startDate" class="col-md-3 col-form-label mt-3 text-md-right">Start Date</label>
