                <textarea type="text" name="roomTypeDesct" placeholder="Meeting description..." class="form-control col-md-7 mt-3" rows="3"></textarea>

                <label for="note" class="col-md-3 col-form-label mt-3 text-md-right">Note</label>
                <textarea type="text" name="roomTypeDesct" placeholder="Meeting description..." class="form-control col-md-7 mt-3" rows="3"></textarea>
