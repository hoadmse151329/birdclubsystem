@{
    Layout = null;
    ViewData["Title"] = "Manager Meeting Page";
    List<BAL.ViewModels.LocationViewModel> locationList = Model.Locations;
    List<BAL.ViewModels.FieldTripViewModel> fieldtripList = Model.FieldTrips;
    BAL.ViewModels.FieldTripViewModel createFieldTrip = new();
    string? search = string.Empty;
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS -->
    <link rel="stylesheet" href="~/css/owner-style.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
    <!--Boxicons-->
    <link rel='stylesheet' href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css'>
    <!-- Other-->
    <link rel="stylesheet" href="https://unpkg.com/filepond-plugin-file-poster/dist/filepond-plugin-file-poster.css" >
</head>
<body>
    <!-- sidebar -->
        <div class="sidebar">
        <div class="container">
            <div class="navigation">  
                <ul class="slide-menu">
                    <div class="logo">
                        <a href="@Url.Action("ManagerIndex", "Manager")">
                            <img class="logo" src="~/images/Red_whiskered_bulbul_bird_logo_eps_10_generated 1.png" alt="logo">
                        </a>
                    </div>
                    <li class="active" data-toggle="tooltip"data-placement="right" title="Overview">
                        <a href="@Url.Action("ManagerIndex", "Manager")">
                            <span><i class='bx bx-tachometer'></i></span>
                            <span class="title">Overview</span>
                        </a>
                    </li>
                    <li>
                        <a href="#" data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                            <i class='bx bx-bookmarks'></i>
                            <span class="title">Manage</span>
                            <i class='bx bxs-chevron-down drop'></i>
                        </a>
                        <ul class="collapse sub-menu" id="collapseOne">
                            <li data-toggle="tooltip"data-placement="right" title="Manage Meeting">
                                <a href="@Url.Action("ManagerMeeting", "Manager")" li class="dropdown-item">
                                    <i class='bx bx-home-alt-2'></i>
                                    <span class="title">Meeting</span>
                                </a> 
                            </li>
                            <li data-toggle="tooltip"data-placement="right" title="Manage Fieldtrip">
                                <a href="@Url.Action("ManagerFieldtrip", "Manager")" li class="dropdown-item">
                                    <i class='bx bx-calendar-edit'></i>
                                    <span class="title">Fieldtrip</span>
                                </a>
                            </li> 
                            <li data-toggle="tooltip"data-placement="right" title="Manage Bird Contest">
                                <a href="@Url.Action("ManagerBirdContest", "Manager")" li class="dropdown-item">
                                    <i class='bx bx-cloud-rain'></i>
                                    <span class="title">Bird Contest</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li data-toggle="tooltip"data-placement="right" title="History Events">
                        <a href="@Url.Action("ManagerHistoryEvents", "Manager")">
                            <span><i class='bx bx-history'></i></span>
                            <span class="title">HistoryEvents</span>
                        </a>
                    </li>
                    <li data-toggle="tooltip"data-placement="right" title="Manage Notification">
                        <a href="@Url.Action("ManagerNotification", "Manager")">
                            <span><i class='bx bx-bell'></i></span>
                            <span class="title">Notification</span>
                        </a>
                    </li>
                    <li data-toggle="tooltip"data-placement="right" title="Manage Feedback">
                        <a href="@Url.Action("ManagerFeedback", "Manager")">
                            <span><i class="bx bx-detail"></i></span>
                            <span class="title">Feedback</span>
                        </a>
                    </li>
                    <li data-toggle="tooltip"data-placement="right" title="Manage Statical">
                        <a href="@Url.Action("ManagerStatical", "Manager")">
                            <span><i class='bx bx-line-chart'></i></span>
                            <span class="title">Statical</span>
                        </a>
                    </li>
                    <li data-toggle="tooltip"data-placement="right" title="Manager Profile">
                        <a href="@Url.Action("ManagerProfile", "Manager")">
                            <span><i class='bx bx-user'></i></span>
                            <span class="title">Manager Profile</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- End sidebar -->

    <!-- Header -->
    <div class="header">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="toggle float-left">
                            <i class='bx bx-menu'></i>
                        </div>
                        <div class="float-left">
                            <div class="dashboard_bar d-flex">
                                Home
                            </div>
                        </div>
                        <div class="float-right">
                            <div class="btn-group me-1 mb-1">
                                <div class="dropdown">
                                    <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Hồ Trần Khánh Duy
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <a class="dropdown-item" href="@Url.Action("ManagerProfile", "Manager")"><i class='bx bx-user'></i>Manager Profile</a> <!--thêm theo user id và role-->
                                        <a class="dropdown-item" href="@Url.Action("ManagerNotification", "Manager")"><i class='bx bx-bell'></i>Notification</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="@Url.Action("Logout", "Auth")"><i class='bx bx-log-out-circle'></i>Logout</a>
                                    </div>
                                </div>  
                            </div>
                        </div>   
                    </div>
                </div>
            </div>
        </div>
    <!-- End header -->

    <!-- List room -->
    <div class="main-content">
        <div class="main">
            <div class="container-fluid">
                <div class="row">
                    <div class="offset-sm-6 col-sm-6  d-flex justify-content-sm-end p-md-0 mt-2 mt-sm-0 ">
                        <ol class="breadcrumb">
                            <li class="breadcrumd-item">
                                <a href="#">Quản lý</a>
                            </li>
                            <li class="breadcrumd-item">
                                <span>/</span>
                            </li>
                            <li class="breadcrumd-item active">
                                <a href="owner-room-list.html">Phòng</a>
                            </li>
                        </ol>
                    </div>
                </div>
                <section>
                    <div class="card">
                        <div class="card-body">
                            <!-- Nav tabs -->
                            <ul class="nav nav-tabs">
                                <!-- dung vong for o day -->
                                <li class="nav-item">
                                    <a class="nav-link active" data-toggle="tab" href="#home1">
                                        <i class='bx bx-home-alt-2'></i>
                                        <span>FieldTrip</span>
                                    </a>
                                </li>             
                            </ul>
                            
                            <!-- Tab panes -->
                            <div class="tab-content">
                                <!-- home1 -->
                                <div class="tab-pane active" id="home1" role="tabpanel">
                                    <div class="row search">
                                        <div class="col-sm-12 d-flex">
                                            <div class="col-sm-6 d-flex address-home">
                                                @{
                                                    if (ViewBag.error != null)
                                                    {
                                                        <span class="text-danger">@ViewBag.error</span>
                                                    }
                                                }
                                            </div>
                                            <div class="col-sm-6 d-flex justify-content-end">
                                                <form asp-action="ManagerFieldTrip" asp-controller="Manager" method="get" asp-route-search="@search">
                                                    <div>
                                                        <label>
                                                            <input asp-for="@search" class="form-control" type="text" name="search" placeholder="Search..." value="@search">
                                                            <button class="bx bx-search-alt" type="submit"></button>
                                                            @*<i class='bx bx-search-alt'></i>*@
                                                        </label>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row card-content">
                                        <div class="col-xl-3 col-lg-6 col-sm-6 my-3 item">
                                            <div class="card card-child">
                                                <div class="card-body add-room">
                                                    <button class="border-0" data-toggle="modal"  data-target="#addFieldTrip">
                                                        <span>Add FieldTrip</span>
                                                        <i class='bx bx-add-to-queue'></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- dung vong for o day -->
                                        @foreach (var data in fieldtripList)
                                        {
                                            <div class="col-xl-3 col-lg-6 col-sm-6 my-3">
                                                <div class="card card-child">
                                                    <div class="room-name">
                                                        <span>Meeting</span>
                                                        <div class="status">
                                                            <!-- dùng lệnh if -->
                                                            @*<span class="stt1">Status:<h6>Processing</h6></span>*@
                                                            <span class="stt1">Status:<h6>@data.Status</h6></span>
                                                            <!-- <span class="stt2">Trạng thái:<h6>Done</h6></span>
                                                            <span class="stt3">Trạng thái:<h6>Cancle</h6></span>
                                                            <span class="stt3">Trạng thái:<h6>In debt</h6></span>-->
                                                        </div>
                                                    </div>
                                                    <div class="card-body">
                                                        <div class="room-title">
                                                            <ul>
                                                                <li>
                                                                    <h6>Meeting Name:</h6>
                                                                    <span>@data.TripName</span>
                                                                </li>
                                                                <li>
                                                                    <h6>Registration Deadlines:</h6>
                                                                    <span>@data.RegistrationDeadline.Value.ToString("MM/dd/yyyy")</span>
                                                                </li>
                                                                <li>
                                                                    <h6>Start Date:</h6>
                                                                    <span>@data.StartDate.Value.ToString("MM/dd/yyyy")</span>
                                                                </li>
                                                                <li>
                                                                    <h6>End Date:</h6>
                                                                    <span>@data.EndDate.Value.ToString("MM/dd/yyyy")</span>
                                                                </li>
                                                                <li>
                                                                    <h6>Maximum Participants:</h6>
                                                                    <span>@data.NumberOfParticipantsLimit</span>
                                                                </li>
                                                                <li>
                                                                    <h6>Location:</h6>
                                                                    <span>@data.AreaNumber,@data.Street,@data.District,@data.City</span>
                                                                </li>
                                                                <li>
                                                                    <h6>Description:</h6>
                                                                    <span>@data.Description</span>
                                                                </li>
                                                                <li>
                                                                    <h6>Note:</h6>
                                                                    <span>@data.Note</span>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                    <div class="form-group mx-auto">
                                                        <form asp-action="FieldTrip" asp-controller="Manager" method="get" asp-route-id="@data.TripId">
                                                            <button class="btn btn-primary clickable-row" type="submit">See Detail</button>
                                                        </form>
                                                        <form asp-action="ManagerCancelFieldTrip" asp-controller="Manager" method="post" asp-route-id="@data.TripId">
                                                            <button class="btn btn-danger" data-toggle="modal" data-target="#deleteRoom" type="submit">Cancel FieldTrip</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        }

                                    <div class="pagination d-flex justify-content-center">
                                        <li class="page-item previous-page disabled"><a href="#" class="page-link">Trước</a></li>
                                        <li class="page-item dots">...</li>
                                        <li class="page-item current-page active"><a href="#" class="page-link">2</a></li>
                                        <li class="page-item current-page"><a href="#" class="page-link">3</a></li>
                                        <li class="page-item current-page"><a href="#" class="page-link">4</a></li>
                                        <li class="page-item dots">...</li>
                                        <li class="page-item next-page"><a href="#" class="page-link">Sau</a></li>
                                    </div>
                                </div>
                            </div>
                            <!-- end tapnet -->
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>

    <!-- add new Room -->
    <div id="addFieldTrip" class="modal fade" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
            <div class="modal-content modal-addRoom">
                <div class="modal-header">
                    <h4 class="modal-title">Thêm Phòng Mới</h4>
                </div>
                <div class="modal-body">
                    <form action="#" onsubmit="return submitFunc()" id="form">
                        <div class="row p-4">
                            <div class="col-12">
                                <div class="row form-group">
                                    <label for="firstname" class="col-md-3 col-form-label text-md-right">Tên phòng</label>
                                    <select id="motelid" name="MotelID" class="form-control col-md-7" onchange="myFunc()" required>
                                        <option value="" disabled selected>Chọn Motel</option>
                                        <option value="a">ánh dương</option>
                                        <option value="b">bạch dương</option>
                                    </select>
                                </div>
                                
                                <div class="row form-group">
                                    <label for="firstname" class="col-md-3 col-form-label text-md-right">Loại phòng</label>
                                    <select id="typeRoom" name="typeofRoom" class="form-control col-md-7" onchange="other(event)" required>
                                        <option value="" disabled selected>Chọn loại phòng</option>
                                        <option data-option="a" value="#">Luxury</option>
                                        <option data-option="a" value="#">Normal</option>
                                        <option data-option="b" value="#">L</option>
                                        <option data-option="b" value="#">n</option>
                                        <option value="custom">Other</option>
                                    </select>
                                    <input type="text" id="otherid" class="offset-md-3 form-control col-md-3 mt-2" style="display: none;"
                                     placeholder="Loại phòng">
                                    <input type="text" id="otherid1" name="price" placeholder="Giá Phòng" 
                                    class="form-control offset-md-1 col-md-3 mt-2" style="display: none;"> 
                                    <label for="firstname" class="col-md-3 col-form-label text-md-right mt-3" id="labeldecp" style="display: none;">
                                        Mô tả
                                        </label>
                                    <textarea type="text" placeholder="Mô tả phòng..." class="form-control col-md-7 mt-3" 
                                    rows="3" id="decp" style="display: none;"></textarea>
                                </div>
                            </div>                 
                        </div>
                        <div class="modal-footer justify-content-center">
                            <div class="d-flex justify-content-center">
                                <button class="btn btn-success mr-3" type="submit" >Xác Nhận</button>
                                <button class="btn btn-danger" type="button" data-dismiss="modal">Hủy</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- remove Home -->
    <div id="deleteRoom" class="modal fade" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="content">
            <div class="modal-content">
                <form action="#">
                    <div class="card-body">
                        <div class="del-title">
                            <i class='bx bx-error-circle'></i>
                            <h2>Bạn muốn xóa phòng ?</h2> 
                        </div>
                        <div class="del-submit d-flex justify-content-center">
                            <button type="submit" class="btn btn-success">Xác Nhận</button>
                            <button class="btn btn-danger" type="button" data-dismiss="modal">Hủy</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- remove Home -->
    <div id="removeRoom" class="modal fade" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="content">
            <div class="modal-content">
                <form action="#">
                    <div class="card-body">
                        <div class="del-title">
                            <i class='bx bx-error-circle'></i>
                            <h2>Bạn muốn hủy phòng ?</h2> 
                        </div>
                        <div class="del-submit d-flex justify-content-center">
                            <button type="submit" class="btn btn-success">Xác Nhận</button>
                            <button class="btn btn-danger" type="button" data-dismiss="modal">Hủy</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    

    <!-- jQuery first, then Popper.js, then Bootstrap JS. -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js"></script>
    <script src="https://unpkg.com/filepond-plugin-file-poster/dist/filepond-plugin-file-poster.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="~/js/owner-script.js"></script>
</body>
</html>