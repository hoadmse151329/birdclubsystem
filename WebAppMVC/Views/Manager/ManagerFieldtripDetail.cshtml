    int createDayByDayCount = detailDayByDay.Count + 1;
    BAL.ViewModels.FieldtripDaybyDayViewModel createDayByDay = Model.CreateFieldTripDayByDay != null ? Model.CreateFieldTripDayByDay : new BAL.ViewModels.FieldtripDaybyDayViewModel();

