@model dynamic
@{
    ViewData["Title"] = "Meeting Page";
    string locationSearchName = string.Empty;
    string locationSearchAddress = string.Empty;
    string locationSearchRoad = string.Empty;
    string locationSearchDistrict = string.Empty;
    string locationSearchCity = string.Empty;

    List<BAL.ViewModels.MeetingViewModel> meetingList = Model.Meetings;
}

<html>
  <head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
        <!-- FONT -->
        <link
            href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,300;0,400;0,700;0,900;1,100&family=Roboto+Condensed:wght@400;700&display=swap"
            rel="stylesheet">
        <!-- FONT AWESOME -->
        <link rel="stylesheet" href="~/fonts/fontawesome-free-5.15.4-web/css/all.min.css">
        <!-- owl carousels -->
        <link rel="stylesheet" href="~/css/owl.carousel.min.css">
        <link rel="stylesheet" href="~/css/owl.theme.default.min.css">

        <!-- main CSS -->
        <link rel="stylesheet" href="~/css/main.css">
            <link rel="stylesheet" href="~/css/Meeting.css">
        <!-- main CSS -->
  </head>
  <body>
    <hr>
    <div class="header__breadcrumb container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")" class="text-decoration-none">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">All Meetings</li>
            </ol>
        </nav>
    </div>
    <hr>

    <!-- CONTENT -->
    <section class="content__list-room container">
        <div class="row">
                <div class="content__filter col-3">
                    <div class="content__filter-tabs-left">
                        <form asp-action="Index" asp-controller="Meeting" method="get" asp-route-locationAddress="@locationSearchAddress">
                            <div class="tabs-left-title">
                                <h3 class="heading">Filter</h3>
                            </div>
                            <div class="tabs-left-filter" style="background-color:white">
                                <div class="input-group mb-3">
                                    <select asp-for="@locationSearchRoad" asp-items="@Model.Roads" class="custom-select" name="road" id="road">
                                        <option value="">Road</option>
                                    </select>
                                </div>
                                <div class="input-group mb-3">
                                    <select asp-for="@locationSearchDistrict" asp-items="@Model.Districts" class="custom-select" name="district" id="district">
                                        <option value="">District</option>
                                    </select>
                                </div>
                                <div class="input-group mb-3">
                                    <select asp-for="@locationSearchCity" asp-items="@Model.Cities" class="custom-select" name="city" id="city">
                                        <option value="">City</option>
                                    </select>
                                </div>
                            </div>
                            <div class="filter-search text-center">
                                @{
                                    locationSearchAddress = "," + locationSearchRoad + "," + locationSearchDistrict + "," + locationSearchCity;
                                }
                                <input asp-for="@locationSearchAddress" class="form-control" type="text" name="locationAddress" value="@locationSearchAddress" hidden>
                                <button class="button--primary" type="submit"><i class="fa fa-filter"></i> Filter</button>
                            </div>
                        </form>
                    </div>
                    <div class="col-bg">
                        <img class="bg-1" src="~/images/chao-mao.png"></img>
                        <img class="bg-2" src="~/images/chao-mao-2.png"></img>
                    </div>
                </div>

            <div class="col-9">
                <div class="content__list row">
                    @{
                        if (ViewBag.error != null)
                        {
                            <span class="text-danger">@ViewBag.error</span>
                        }
                    }
                    @foreach (var data in meetingList)
                    {
                        <div class="col-4 p-0">
                            <div class="room-item">

                                <a href="#" class="club-image">
                                    <img class="img-fluid" src="~/images/meeting.png" alt="nt1">
                                </a>
                                <div class="club-title">
                                    <a href="#" class="text-decoration-none">@data.MeetingName</a>
                                </div>

                                <p class="club-price"><i class="fas fa-calendar-alt"></i>
                                    From @data.StartDate.Value.ToString("MM-dd-yyyy") 
                                    to @data.EndDate.Value.ToString("MM-dd-yyyy")</p>
                                <div class="club-address" data-toggle="tooltip" data-placement="auto"
                                    title="@data.City">
                                    <p class="address truncate">
                                        <i class="fas fa-map-marker-alt"></i>
                                        <span class="district">Address @data.District</span>, <span class="city">@data.City</span></p>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <p class="club-price"><i class="fas fa-comment-alt"></i>@data.Description</p>
                                    <form asp-action="MeetingPost" asp-controller="Meeting" method="get" asp-route-id="@data.MeetingId">
                                        <button class="button--primary text-white text-wrapper-16" type="submit">See Now</button>
                                    </form>
                                </div>

                            </div>
                        </div>
                    }
                <div class="pagination mb-3">
                    <!-- <li class="page-item previous-page disabled">
                        <a class="page-link btn" href="#">Prev</i></a>
                    </li>
                    <li class="pages page-item current-page ">
                        <a class="page page-link" href="#">1</a>
                    </li>
                    <li class="pages page-item dots">
                        <a class="page page-link" href="#">...</a>
                    </li>
                    <li class="pages page-item current-page ">
                        <a class="page page-link" href="#">5</a>
                    </li>
                    <li class="pages page-item current-page ">
                        <a class="page page-link" href="#">6</a>
                    </li>
                    <li class="pages page-item dots">
                        <a class="page page-link" href="#">...</a>
                    </li>
                    <li class="pages page-item current-page ">
                        <a class="page page-link" href="#">10</a>
                    </li>
                    <li class="page-item next-page">
                        <a class="page-link btn" href="#">Next</i></a>
                    </li> -->
                </div>
            </div>
        </div>
    </section>

    <!-- thư viện hỗ trợ -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
        referrerpolicy="no-referrer"></script>
        <!-- Jquery Waypoint -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/waypoints/4.0.1/jquery.waypoints.min.js"></script>
        <!-- BS4 JS -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.5/umd/popper.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- BS4 carousels -->
        <script>
            $('.carousel').carousel({
                interval: 3000
            });
        </script>
        <!-- owl carousels -->
        <script src="./assets/js/owl.carousel.min.js"></script>
        <script>
            $('.clubList-carousel').owlCarousel({
                loop: true,
                margin: 10,
                nav: false,
                responsive: {
                    0: {
                        items: 1
                    },
                    576: {
                        items: 2
                    },
                    1200: {
                        items: 4
                    }
                }
            });
        </script>
        <!-- main js -->
        <script src="~/js/user-script.js"></script>
  </body>
</html>