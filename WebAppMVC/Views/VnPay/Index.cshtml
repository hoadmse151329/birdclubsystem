@{
    ViewData["Title"] = "Pay with VnPay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1 class="display-4">Pay with VnPay</h1>
</div>

<div class="table-responsive">
    <form action="/VnPay/CreatePaymentUrl" id="frmCreateTransaction" method="post">
        <div class="form-group">
            <label for="TransactionType">Transaction Type</label>
            <select name="TransactionType" id="TransactionType" class="form-control">
                <option value="Membership Renewal">Membership Renewal</option>
                <option value="Event Registration">Event Registration</option>
                <option value="Donation">Donation</option>
            </select>
        </div>
        <br/>
        <div class="form-group">
            <label for="Name">User Name</label>
            <input class="form-control"
                    id="Name"
                    name="Name"
                    type="text"
                    value="Nguyen Van A" />
        </div>
        <br/>
        <div class="form-group">
            <label for="Value">Value</label>
            <input class="form-control"
                   id="Value"
                   name="Value"
                   type="text"
                   value="20000000">
        </div>
        <br/>
        <button type="submit" class="btn btn-primary">Checkout</button>
    </form>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
        referrerpolicy="no-referrer"></script>
        <!-- Jquery Waypoint -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/waypoints/4.0.1/jquery.waypoints.min.js"></script>
        <!-- BS4 JS -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.5/umd/popper.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- BS4 carousels -->
        <script>
            $('.carousel').carousel({
                interval: 3000
            });
        </script>
        <!-- owl carousels -->
        <script src="./assets/js/owl.carousel.min.js"></script>
        <script>
