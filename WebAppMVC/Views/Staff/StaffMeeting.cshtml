@model dynamic
@{
    Layout = null;
    ViewData["Title"] = "Staff Meeting Page";
    List<BAL.ViewModels.LocationViewModel> locationList = Model.Locations;
    List<BAL.ViewModels.MeetingViewModel> meetingList = Model.Meetings;
    BAL.ViewModels.MeetingViewModel createMeet = new();
    string? search = string.Empty;
        Layout = "~/Views/Shared/_SLayout.cshtml";
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS -->
    <link rel="stylesheet" href="~/css/owner-style.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
    <!--Boxicons-->
    <link rel='stylesheet' href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css'>
    <!-- Other-->
    <link rel="stylesheet" href="https://unpkg.com/filepond-plugin-file-poster/dist/filepond-plugin-file-poster.css" >
</head>
<body>
    <!-- sidebar -->
        <div class="sidebar">
        <div class="container">
            <div class="navigation">  
                <ul class="slide-menu">
                    <div class="logo">
                        <a href="@Url.Action("StaffIndex", "Staff")">
                            <img class="logo" src="~/images/Red_whiskered_bulbul_bird_logo_eps_10_generated 1.png" alt="logo">
                        </a>
                    </div>
                    <li class="active" data-toggle="tooltip"data-placement="right" title="Overview">
                        <a href="@Url.Action("StaffIndex", "Staff")">
                            <span><i class='bx bx-tachometer'></i></span>
                            <span class="title">Overview</span>
                        </a>
                    </li>
                    <li>
                        <a href="#" data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                            <i class='bx bx-bookmarks'></i>
                            <span class="title">Manage</span>
                            <i class='bx bxs-chevron-down drop'></i>
                        </a>
                        <ul class="collapse sub-menu" id="collapseOne">
                            <li data-toggle="tooltip"data-placement="right" title="Manage Meeting">
                                <a href="@Url.Action("StaffMeeting", "Staff")" li class="dropdown-item">
                                    <i class='bx bx-home-alt-2'></i>
                                    <span class="title">Meeting</span>
                                </a> 
                            </li>
                            <li data-toggle="tooltip"data-placement="right" title="Manage Fieldtrip">
                                <a href="@Url.Action("StaffFieldTrip", "Staff")" li class="dropdown-item">
                                    <i class='bx bx-calendar-edit'></i>
                                    <span class="title">Fieldtrip</span>
                                </a>
                            </li> 
                            <li data-toggle="tooltip"data-placement="right" title="Manage Bird Contest">
                                <a href="@Url.Action("StaffContest", "Staff")" li class="dropdown-item">
                                    <i class='bx bx-trophy'></i>
                                    <span class="title">Bird Contest</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                    </li>
                    <li data-toggle="tooltip"data-placement="right" title="Staff Profile">
                        <a href="@Url.Action("StaffProfile", "Staff")">
                            <span><i class='bx bx-user'></i></span>
                            <span class="title">Staff Profile</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- End sidebar -->

    <!-- Header -->
    <div class="header">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="toggle float-left">
                            <i class='bx bx-menu'></i>
                        </div>
                        <div class="float-left">
                            <div class="dashboard_bar d-flex">
                                Home
                            </div>
                        </div>
                        <div class="float-right">
                            <div class="btn-group me-1 mb-1">
                                <div class="dropdown">
                                    @if (TempData["ROLE_NAME"] != null)
                                    {
                                    <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @TempData["USER_NAME"]
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <a class="dropdown-item" href="@Url.Action("StaffProfile", "Staff")"><i class='bx bx-user'></i>Staff Profile</a> <!--thêm theo user id và role-->
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="@Url.Action("Logout", "Auth")">Logout</a>
                                    </div>
                                    }
                                </div>  
                            </div>
                        </div>   
                    </div>
                </div>
            </div>
        </div>
    <!-- End header -->

    <!-- List club -->
    <div class="main-content">
        <div class="main">
            <div class="container-fluid">
                <div class="row">
                    <div class="offset-sm-6 col-sm-6  d-flex justify-content-sm-end p-md-0 mt-2 mt-sm-0 ">
                        <ol class="breadcrumb">
                            <li class="breadcrumd-item">
                                <a href="#">Manage</a>
                            </li>
                            <li class="breadcrumd-item">
                                <span>/</span>
                            </li>
                        </ol>
                    </div>
                </div>
                <section>
                    <div class="card">
                        <div class="card-body">
                            <!-- Nav tabs -->
                            <ul class="nav nav-tabs">
                                <li class="nav-item">
                                    <a class="nav-link active" data-toggle="tab" href="#home1">
                                        <i class='bx bx-home-alt-2'></i>
                                        <span>Meeting</span>
                                    </a>
                                </li>              
                            </ul>
                            
                            <!-- Tab panes -->
                            <div class="tab-content">
                                <!-- home1 -->
                                <div class="tab-pane active" id="home1" role="tabpanel">
                                    <div class="row search">
                                        <div class="col-sm-12 d-flex">
                                            <div class="col-sm-6 d-flex address-home">
                                                @{
                                                    if (ViewBag.error != null)
                                                    {
                                                        <span class="text-danger">@ViewBag.error</span>
                                                    }
                                                }
                                            </div>
                                            <div class="col-sm-6 d-flex justify-content-end">
                                                <form asp-action="StaffMeeting" asp-controller="Staff" method="get" asp-route-search="@search">
                   
                                                            <input asp-for="@search" class="form-control" type="text" name="search" placeholder="Search..." value="@search">
                                                            <button class="bx bx-search-alt" type="submit">
                                                                <i class="sbi sbi--search mirrored header__search-submit-icon"></i>
                                                            </button>
                                                            @*<i class='bx bx-search-alt'></i>*@
                                                        
                                                    
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row card-content">
                                        <div class="col-xl-3 col-lg-6 col-sm-6 my-3 item">
                                            <div class="card card-child">
                                                <div class="card-body add-club">
                                                    <button class="border-0" data-toggle="modal"  data-target="#addMeeting">
                                                        <span>Add Meeting</span>
                                                        <i class='bx bx-add-to-queue'></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                        @foreach(var data in meetingList)
                                        {
                                            <div class="col-xl-3 col-lg-6 col-sm-6 my-3">
                                                <div class="card card-child">
                                                    <div class="club-name">
                                                        <span>Meeting</span>
                                                        <div class="status">
                                                            @{
                                                                switch (data.Status)
                                                                {
                                                                    case "Ongoing":
                                                                    case "CheckingIn":
                                                                    case "OpenRegistration":
                                                                        {
                                                                            <span class="stt1" style="float: left;">Status:<h6>@data.Status</h6></span>
                                                                            break;
                                                                        }
                                                                    case "OnHold":
                                                                    case "ClosedRegistration":
                                                                        {
                                                                            <span class="stt3" style="float: left;">Status:<h6>@data.Status</h6></span>
                                                                            break;
                                                                        }
                                                                    case "Ended":
                                                                    case "Postponed":
                                                                    case "Cancelled":
                                                                        {
                                                                            <span class="stt2" style="float: left;">Status:<h6>@data.Status</h6></span>
                                                                            break;
                                                                        }
                                                                }
                                                            }
                                                        </div>
                                                    </div>
                                                    <div class="card-body">
                                                        <div class="club-title">
                                                            <ul>
                                                                <li>
                                                                    <h6>Meeting Name:</h6>
                                                                    <span>@data.MeetingName</span>
                                                                </li>
                                                                <li>
                                                                    <h6>Registration Deadlines:</h6>
                                                                    <span>@data.RegistrationDeadline.ToString("MM/dd/yyyy")</span>
                                                                </li>
                                                                <li>
                                                                    <h6>Start Date:</h6>
                                                                    <span>@data.StartDate.ToString("MM/dd/yyyy")</span>
                                                                </li>
                                                                <li>
                                                                    <h6>End Date:</h6>
                                                                    <span>@data.EndDate.ToString("MM/dd/yyyy")</span>
                                                                </li>
                                                                <li>
                                                                    <h6>Maximum Participants:</h6>
                                                                    <span>@data.NumberOfParticipantsLimit</span>
                                                                </li>
                                                                <li>
                                                                    <h6>Location:</h6>
                                                                    <span>@data.AreaNumber,@data.Street,@data.District,@data.City</span>
                                                                </li>
                                                                <li>
                                                                    <h6>Description:</h6>
                                                                    <span>@data.Description</span>
                                                                </li>
                                                                <li>
                                                                    <h6>Note:</h6>
                                                                    <span>@data.Note</span>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                    <div class="form-group mx-auto">
                                                        <form asp-action="Meeting" asp-controller="Staff" method="get" asp-route-id="@data.MeetingId">
                                                            <button class="btn btn-primary clickable-row" type="submit">See Detail</button>
                                                        </form>                                                        
                                                            <button class="btn btn-danger" data-toggle="modal" data-target="#deleteMeeting" type="submit">Cancel Meeting</button>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                </div>                               
                            <!-- end tapnet -->
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
       
    <script>
    function redirectToDetailPage() {
        window.location.href = '@Url.Action("StaffMeetingDetail", "Staff")';
    }
</script>
</body>
</html>