@model dynamic
@{
    Layout = null;
    ViewData["Title"] = "Staff Field Trip Detail Page";
    BAL.ViewModels.FieldTripViewModel detailsTrip = Model.FieldTripDetails;
    BAL.ViewModels.FieldTripViewModel updateTrip = Model.UpdateFieldTrip != null ? Model.UpdateFieldTrip : detailsTrip;
    List<BAL.ViewModels.FieldtripDaybyDayViewModel>? DayByDay = detailsTrip.FieldtripDaybyDays;
    List<BAL.ViewModels.FieldTripAdditionalDetailViewModel>? TourFeatures = Model.FieldTripTourFeatures;
    List<BAL.ViewModels.FieldTripAdditionalDetailViewModel>? Importants = Model.FieldTripImportantToKnows;
    List<BAL.ViewModels.FieldTripAdditionalDetailViewModel>? ActAndTras = Model.FieldTripActivitiesAndTransportation;
    List<BAL.ViewModels.FieldtripMediaViewModel>? Media = detailsTrip.FieldtripPictures;
    List<BAL.ViewModels.FieldtripInclusionViewModel>? Inclusion = detailsTrip.FieldtripInclusions;

    BAL.ViewModels.FieldtripGettingThereViewModel Gettingthere = detailsTrip.FieldtripGettingTheres;

    List<BAL.ViewModels.FieldTripParticipantViewModel>? tripPartView = Model.FieldTripParticipants;

    List<SelectListItem> checkInStatus = new()
    {
        new SelectListItem {Text = "Not Checked-In", Value = "Not Checked-In"},
        new SelectListItem {Text = "Checked-In", Value = "Checked-In"}
    };
    List<SelectListItem> defaultTripStatus = Model.SelectListStatus;
    Layout = "~/Views/Shared/_SLayout.cshtml";
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS -->
    <link rel="stylesheet" href="~/css/owner-style.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
    <!--Boxicons-->
    <link rel='stylesheet' href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css'>
    <!-- Other-->
    <link rel="stylesheet" href="https://unpkg.com/filepond-plugin-file-poster/dist/filepond-plugin-file-poster.css">
</head>
<body>
    <!-- List club -->
    <div class="main-content">
        <div class="main">
            <div class="container-fluid">
                <div class="row">
                    <div class="offset-sm-6 col-sm-6  d-flex justify-content-sm-end p-md-0 mt-2 mt-sm-0 ">
                        <ol class="breadcrumb">
                            <li class="breadcrumd-item">
                                <a href="#">Manage</a>
                            </li>
                            <li class="breadcrumd-item">
                                <span>/</span>
                            </li>
                        </ol>
                    </div>
                </div>
                <div class="row">
                    <div class="col-7 customer-booking">
                        <div class="row">
                            <div class="card profile col-12 mb-4">
                                <div class="card-header">
                                    <h4>FieldTrip Information</h4>
                                    <div class="edit-info">
                                        <i class='bx bxs-edit-alt' data-toggle="modal" data-target="#editprofile"></i>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-5 text-sm-right">
                                            <span>Status:</span>
                                        </div>
                                        <div class="col-sm-7">
                                            @{
                                                switch (detailsTrip.Status)
                                                {
                                                    case "Ongoing":
                                                    case "CheckingIn":
                                                    case "OpenRegistration":
                                                        {
                                                            <span class="outcome" style="float: left;">@detailsTrip.Status</span>
                                                            break;
                                                        }
                                                    case "OnHold":
                                                    case "ClosedRegistration":
                                                        {
                                                            <span class="approval" style="float: left;">@detailsTrip.Status</span>
                                                            break;
                                                        }
                                                    case "Ended":
                                                    case "Postponed":
                                                    case "Cancelled":
                                                        {
                                                            <span class="destroy" style="float: left;">@detailsTrip.Status</span>
                                                            break;
                                                        }
                                                }
                                            }
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-5 text-md-right">
                                            <label for="meeting-name">FieldTrip Name:</label>
                                        </div>
                                        <div class="col-md-7">
                                            <span>@detailsTrip.TripName</span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-5 text-md-right">
                                            <label for="customer-name">Registration Deadlines:</label>
                                        </div>
                                        <div class="col-md-7">
                                            <span>@detailsTrip.RegistrationDeadline.ToString("MM/dd/yyyy")</span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-5 text-md-right">
                                            <label for="customer-name">Start Date:</label>
                                        </div>
                                        <div class="col-md-7">
                                            <span>@detailsTrip.StartDate.ToString("MM/dd/yyyy")</span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-5 text-md-right">
                                            <label for="customer-name">End Date:</label>
                                        </div>
                                        <div class="col-md-7">
                                            <span>@detailsTrip.EndDate.ToString("MM/dd/yyyy")</span>
                                        </div>
                                    </div>
                                    <div class="row mb-sm-2">
                                        <div class="col-sm-5 text-sm-right">
                                            <span>Host:</span>
                                        </div>
                                        <div class="col-sm-7 text-sm-left">
                                            <span>@detailsTrip.Host</span>
                                        </div>
                                    </div>
                                    <div class="row mb-sm-2">
                                        <div class="col-sm-5 text-sm-right">
                                            <span>Incharge:</span>
                                        </div>
                                        <div class="col-sm-7 text-sm-left">
                                            <span>@detailsTrip.InCharge</span>
                                        </div>
                                    </div>
                                    <div class="row mb-sm-2">
                                        <div class="col-sm-5 text-sm-right">
                                            <span>Fee:</span>
                                        </div>
                                        <div class="col-sm-7 text-sm-left">
                                            <span>@detailsTrip.Fee</span>
                                        </div>
                                    </div>
                                    <div class="row mb-sm-2">
                                        <div class="col-sm-5 text-sm-right">
                                            <span>Maximum Participations:</span>
                                        </div>
                                        <div class="col-sm-7 text-sm-left">
                                            <span>@detailsTrip.NumberOfParticipantsLimit</span>
                                        </div>
                                    </div>
                                    <div class="row mb-sm-2">
                                        <div class="col-sm-5 text-sm-right">
                                            <span>Remaining Participant Slots:</span>
                                        </div>
                                        <div class="col-sm-7 text-sm-left">
                                            <span>@detailsTrip.NumberOfParticipants</span>
                                        </div>
                                    </div>
                                    <div class="row mb-sm-2">
                                        <div class="col-sm-5 text-sm-right">
                                            <span>Location:</span>
                                        </div>
                                        <div class="col-sm-7 text-sm-left">
                                            <span>@detailsTrip.AreaNumber,@detailsTrip.Street,@detailsTrip.District,@detailsTrip.City</span>
                                        </div>
                                    </div>
                                    <div class="row mb-sm-2">
                                        <div class="col-sm-5 text-sm-right">
                                            <span>Description:</span>
                                        </div>
                                        <div class="col-sm-7 text-sm-left">
                                            <span>@detailsTrip.Description</span>
                                        </div>
                                    </div>
                                    <div class="row mb-sm-2">
                                        <div class="col-sm-5 text-sm-right">
                                            <span>Note:</span>
                                        </div>
                                        <div class="col-sm-7 text-sm-left">
                                            <span>@detailsTrip.Note</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="card profile col-12 mb-4">
                                <div class="card-header">
                                    <h4>AddDetails</h4>
                                </div>
                                <div class="card-body">
                                    @foreach (var rate in detailsTrip.FieldtripAdditionalDetails)
                                    {
                                        @* <div class="row mb-sm-2">
                                    <div class="col-sm-5 text-sm-right">
                                    <span>@rate.RateType</span>
                                    </div>
                                    <div class="col-sm-7 text-sm-left">
                                    <span>@rate.Price</span>
                                    </div>
                                    </div>  *@
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="card profile col-12 mb-4">
                                <div class="card-header">
                                    <h4>Getting There</h4>
                                </div>
                                <div class="card-body">
                                    <div class="row mb-sm-2">
                                        <div class="col-sm-12 text-sm">
                                            <span>@detailsTrip.FieldtripGettingTheres.GettingThereAccommodation</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="card profile col-12 mb-4">
                                <div class="card-header">
                                    <h4>Day By Day</h4>
                                </div>
                                <div class="card-body">
                                    @foreach (var day in detailsTrip.FieldtripDaybyDays)
                                    {
                                        <div class="row mb-sm-2">
                                            <div class="col-sm-2 text-sm-left">
                                                <span>@day.Day</span>
                                            </div>
                                            <div class="col-sm-7 text-sm">
                                                <span>@day.Description</span>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="card profile col-12 mb-4">
                                <div class="card-header">
                                    <h4>Inclusions</h4>
                                </div>
                                <div class="card-body">
                                    @foreach (var inc in detailsTrip.FieldtripInclusions)
                                    {
                                        <div class="row mb-sm-2">
                                            <div class="col-sm-4 text-sm-left">
                                                <span>@inc.Title</span>
                                            </div>
                                            <div class="col-sm-3 text-sm">
                                                <span>@inc.Type</span>
                                            </div>
                                            <div class="col-sm-5 text-sm-right">
                                                <span>@inc.InclusionText</span>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="card profile col-12 mb-4">
                                <div class="card-header">
                                    <h4>Medias</h4>
                                </div>
                                <div class="card-body">
                                    @foreach (var pic in detailsTrip.FieldtripPictures)
                                    {
                                        <div class="row mb-sm-6">
                                            <div class="col-sm-4 text-sm-left">
                                                <span>@pic.Image</span>
                                            </div>
                                            <div class="col-sm-6 text-sm">
                                                <span>@pic.Description</span>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-5 cardFB">
                        <form asp-action="StaffUpdateFieldTripPartStatus" asp-controller="Staff" asp-route-id="@detailsTrip.TripId" method="post">
                            <div class="card border-0 d-flex">
                                <div class="card-header">
                                    <h4>Edit Participant Status</h4>
                                </div>
                                <div class="card-body">
                                    <table class="table table-hover table-borderless">
                                        <thead>
                                            <tr>
                                                <th>Participant No:</th>
                                                <th>Name:</th>
                                                <th>Check In Status:</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @for (int i = 0; i < tripPartView.Count(); i++)
                                            {
                                                <tr class="@("clicks-row "+ (i%2 == 0 ? "even" : "odd")) " data-href="#"
                                                    data-bs-toggle="tooltip" data-bs-placement="right"
                                                    title="More Details">
                                                    <input type="hidden" asp-for="@tripPartView[i].TripId" name="tripPartView[@i].TripId" value="@tripPartView[i].TripId" class="form-control" />
                                                    <input type="hidden" asp-for="@tripPartView[i].MemberId" name="tripPartView[@i].MemberId" value="@tripPartView[i].MemberId" class="form-control" />
                                                    <td class="sorting_1">
                                                        <input type="hidden" asp-for="@tripPartView[i].ParticipantNo" name="tripPartView[@i].ParticipantNo" value="@tripPartView[i].ParticipantNo" class="form-control" />
                                                        @tripPartView[i].ParticipantNo
                                                    </td>
                                                    <td>
                                                        <input type="hidden" asp-for="@tripPartView[i].MemberName" name="tripPartView[@i].MemberName" value="@tripPartView[i].MemberName" class="form-control" />
                                                        @tripPartView[i].MemberName
                                                    </td>
                                                    <td>
                                                        @{
                                                            foreach (var status in checkInStatus)
                                                            {
                                                                if (status.Text.Equals(tripPartView[i].CheckInStatus))
                                                                {
                                                                    status.Selected = true;
                                                                }
                                                            }
                                                        }
                                                        <select class="form-control" asp-for="@tripPartView[i].CheckInStatus" asp-items="@checkInStatus" class="custom-select" name="tripPartView[@i].checkInStatus">
                                                        </select>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                    <div class="row col-12 d-flex">
                                        <div class="rating-club">
                                            <button class="button--primary btn-success bg-success shadow btn-xs text-white" type="submit">Save Changes</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- edit FieldTrip Status -->
    <div id="editprofile" class="modal fade" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="content">
            <div class="modal-content modal-addRoom">
                <div class="modal-header">
                    <h4 class="modal-title">Edit Field Trip Status</h4>
                </div>
                <form asp-action="StaffUpdateFieldTripStatus" asp-controller="Staff" method="post" asp-route-id="@detailsTrip.TripId" class="form-group">
                    <div class="modal-body">
                        <div class="row justify-content-center">
                            <div class="col-12 col-md-6">
                                <div class="form-group row">
                                    <label asp-for="@updateTrip.Status" class="col-sm-4 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <select class="form-control" asp-for="@updateTrip.Status" asp-items="@defaultTripStatus" class="custom-select" required></select>
                                        <span asp-validation-for="@updateTrip.Status" id="error_message"
                                              class="helper-text text-danger d-block offset-md-5 col-md-5 col-sm-8 mt-2"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <input asp-for="@updateTrip.TripName" type="text"
                               value="@updateTrip.TripName" required hidden>
                        <input asp-for="@updateTrip.RegistrationDeadline" type="datetime-local" min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" asp-format="{0:yyyy-MM-ddTHH:mm}"
                               value="@updateTrip.RegistrationDeadline.ToString("yyyy-MM-ddTHH:mm")" required hidden>
                        <input asp-for="@updateTrip.StartDate" type="datetime-local" min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" asp-format="{0:yyyy-MM-ddTHH:mm}"
                               value="@updateTrip.StartDate.ToString("yyyy-MM-ddTHH:mm")" required hidden>
                        <input asp-for="@updateTrip.EndDate" type="datetime-local" min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" asp-format="{0:yyyy-MM-ddTHH:mm}"
                               value="@updateTrip.EndDate.ToString("yyyy-MM-ddTHH:mm")" required hidden>
                        <input asp-for="@updateTrip.NumberOfParticipantsLimit" type="number"
                               value="@updateTrip.NumberOfParticipantsLimit" required hidden>
                        <input asp-for="@updateTrip.Host" type="text"
                               value="@updateTrip.Host" required hidden>
                        <input asp-for="@updateTrip.InCharge" type="text"
                               value="@updateTrip.InCharge" required hidden>
                        <input asp-for="@updateTrip.Fee" type="number"
                               value="@updateTrip.Fee" required hidden>
                        <input asp-for="@updateTrip.Address" type="text"
                               value="@updateTrip.Address" required hidden>
                        <textarea asp-for="@updateTrip.Description" type="text"
                                  value="@updateTrip.Description" required hidden></textarea>
                        <textarea asp-for="@updateTrip.Details" type="text"
                                  value="@updateTrip.Details" required hidden></textarea>
                        <textarea asp-for="@updateTrip.Note" type="text"
                                  value="@updateTrip.Note" required hidden></textarea>
                        <input asp-for="@updateTrip.NumberOfParticipants" type="number"
                               value="@updateTrip.NumberOfParticipants" required hidden>
                    </div>
                    <div class="modal-footer justify-content-center">
                        <button class="btn btn-success" type="submit" value="Update">Save</button>
                        <button class="btn btn-danger" type="button" data-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
