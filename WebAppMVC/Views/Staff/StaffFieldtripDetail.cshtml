@model dynamic
@{
    Layout = null;
    ViewData["Title"] = "Staff Field Trip Detail Page";
    BAL.ViewModels.FieldTripViewModel details = Model.FieldTripDetails;
    List<BAL.ViewModels.FieldtripDaybyDayViewModel>? DayByDay = details.FieldtripDaybyDays;
    List<BAL.ViewModels.FieldTripAdditionalDetailViewModel>? TourFeatures = Model.FieldTripTourFeatures;
    List<BAL.ViewModels.FieldTripAdditionalDetailViewModel>? Importants = Model.FieldTripImportantToKnows;
    List<BAL.ViewModels.FieldTripAdditionalDetailViewModel>? ActAndTras = Model.FieldTripActivitiesAndTransportation;
    List<BAL.ViewModels.FieldtripMediaViewModel>? Media = details.FieldtripPictures;
    List < BAL.ViewModels.FieldtripInclusionViewModel>? Inclusion = details.FieldtripInclusions;

    BAL.ViewModels.FieldtripGettingThereViewModel Gettingthere = details.FieldtripGettingTheres;

    List<BAL.ViewModels.FieldTripParticipantViewModel>? parts = Model.FieldTripParticipants;

    List<SelectListItem> checkInStatus = new()
    {
        new SelectListItem {Text = "Not Checked-In", Value = "Not Checked-In"},
        new SelectListItem {Text = "Checked-In", Value = "Checked-In"}
    };
    List<SelectListItem> defaultMeetingStatus = new()
    {
        new SelectListItem {Text = "Open Registration", Value = "OpenRegistration"},
        new SelectListItem {Text = "Closed Registration", Value = "ClosedRegistration"},
        new SelectListItem {Text = "Checking In", Value = "CheckingIn"},
        new SelectListItem {Text = "Ongoing", Value = "Ongoing"}
    };
        Layout = "~/Views/Shared/_SLayout.cshtml";
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS -->
    <link rel="stylesheet" href="~/css/owner-style.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
    <!--Boxicons-->
    <link rel='stylesheet' href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css'>
    <!-- Other-->
    <link rel="stylesheet" href="https://unpkg.com/filepond-plugin-file-poster/dist/filepond-plugin-file-poster.css">
</head>
<body>
    <!-- List club -->
    <div class="main-content">
        <div class="main">
            <div class="container-fluid">
                <div class="row">
                    <div class="offset-sm-6 col-sm-6  d-flex justify-content-sm-end p-md-0 mt-2 mt-sm-0 ">
                        <ol class="breadcrumb">
                            <li class="breadcrumd-item">
                                <a href="#">Manage</a>
                            </li>
                            <li class="breadcrumd-item">
                                <span>/</span>
                            </li>
                        </ol>
                    </div>
                </div>
                <div class="row">
                    <div class="col-7 customer-booking">
                        <div class="row">
                            <div class="card profile col-12 mb-4">
                                <div class="card-header">
                                    <h4>Meeting Information</h4>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-5 text-sm-right">
                                            <span>Status:</span>
                                        </div>
                                        <div class="col-sm-7">
                                            @{
                                                switch (details.Status)
                                                {
                                                    case "Ongoing":
                                                    case "CheckingIn":
                                                    case "OpenRegistration":
                                                        {
                                                            <span class="outcome" style="float: left;">@details.Status</span>
                                                            break;
                                                        }
                                                    case "OnHold":
                                                    case "ClosedRegistration":
                                                        {
                                                            <span class="approval" style="float: left;">@details.Status</span>
                                                            break;
                                                        }
                                                    case "Ended":
                                                    case "Postponed":
                                                    case "Cancelled":
                                                        {
                                                            <span class="destroy" style="float: left;">@details.Status</span>
                                                            break;
                                                        }
                                                }
                                            }
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-5 text-md-right">
                                            <label for="meeting-name">FieldTrip Name:</label>
                                        </div>
                                        <div class="col-md-7">
                                            <span>@details.TripName</span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-5 text-md-right">
                                            <label for="customer-name">Registration Deadlines:</label>
                                        </div>
                                        <div class="col-md-7">
                                            <span>@details.RegistrationDeadline.ToString("MM/dd/yyyy")</span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-5 text-md-right">
                                            <label for="customer-name">Start Date:</label>
                                        </div>
                                        <div class="col-md-7">
                                            <span>@details.StartDate.ToString("MM/dd/yyyy")</span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-5 text-md-right">
                                            <label for="customer-name">End Date:</label>
                                        </div>
                                        <div class="col-md-7">
                                            <span>@details.EndDate.ToString("MM/dd/yyyy")</span>
                                        </div>
                                    </div>
                                    <div class="row mb-sm-2">
                                        <div class="col-sm-5 text-sm-right">
                                            <span>Host:</span>
                                        </div>
                                        <div class="col-sm-7 text-sm-left">
                                            <span>@details.Host</span>
                                        </div>
                                    </div>
                                    <div class="row mb-sm-2">
                                        <div class="col-sm-5 text-sm-right">
                                            <span>Incharge:</span>
                                        </div>
                                        <div class="col-sm-7 text-sm-left">
                                            <span>@details.InCharge</span>
                                        </div>
                                    </div>
                                    <div class="row mb-sm-2">
                                        <div class="col-sm-5 text-sm-right">
                                            <span>Maximum Participations:</span>
                                        </div>
                                        <div class="col-sm-7 text-sm-left">
                                            <span>@details.NumberOfParticipantsLimit</span>
                                        </div>
                                    </div>
                                    <div class="row mb-sm-2">
                                        <div class="col-sm-5 text-sm-right">
                                            <span>Remaining Participant Slots:</span>
                                        </div>
                                        <div class="col-sm-7 text-sm-left">
                                            <span>@details.NumberOfParticipants</span>
                                        </div>
                                    </div>
                                    <div class="row mb-sm-2">
                                        <div class="col-sm-5 text-sm-right">
                                            <span>Location:</span>
                                        </div>
                                        <div class="col-sm-7 text-sm-left">
                                            <span>@details.AreaNumber,@details.Street,@details.District,@details.City</span>
                                        </div>
                                    </div>
                                    <div class="row mb-sm-2">
                                        <div class="col-sm-5 text-sm-right">
                                            <span>Description:</span>
                                        </div>
                                        <div class="col-sm-7 text-sm-left">
                                            <span>@details.Description</span>
                                        </div>
                                    </div>
                                    <div class="row mb-sm-2">
                                        <div class="col-sm-5 text-sm-right">
                                            <span>Note:</span>
                                        </div>
                                        <div class="col-sm-7 text-sm-left">
                                            <span>@details.Note</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="card profile col-12 mb-4">
                                <div class="card-header">
                                    <h4>AddDetails</h4>
                                </div>
                                <div class="card-body">
                                    @foreach (var rate in details.FieldtripAdditionalDetails)
                                    {
                                        @* <div class="row mb-sm-2">
                                            <div class="col-sm-5 text-sm-right">
                                                <span>@rate.RateType</span>
                                            </div>
                                            <div class="col-sm-7 text-sm-left">
                                                <span>@rate.Price</span>
                                            </div>
                                        </div>  *@                                       
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="card profile col-12 mb-4">
                                <div class="card-header">
                                    <h4>Getting There</h4>
                                </div>
                                <div class="card-body">
                                    <div class="row mb-sm-2">
                                        <div class="col-sm-12 text-sm">
                                            <span>@details.FieldtripGettingTheres.GettingThereAccommodation</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="card profile col-12 mb-4">
                                <div class="card-header">
                                    <h4>Day By Day</h4>
                                </div>
                                <div class="card-body">
                                    @foreach (var day in details.FieldtripDaybyDays)
                                    {
                                        <div class="row mb-sm-2">
                                            <div class="col-sm-2 text-sm-left">
                                                <span>@day.Day</span>
                                            </div>
                                            <div class="col-sm-7 text-sm">
                                                <span>@day.Description</span>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="card profile col-12 mb-4">
                                <div class="card-header">
                                    <h4>Inclusions</h4>
                                </div>
                                <div class="card-body">
                                    @foreach (var inc in details.FieldtripInclusions)
                                    {
                                        <div class="row mb-sm-2">
                                            <div class="col-sm-4 text-sm-left">
                                                <span>@inc.Title</span>
                                            </div>
                                            <div class="col-sm-3 text-sm">
                                                <span>@inc.Type</span>
                                            </div>
                                            <div class="col-sm-5 text-sm-right">
                                                <span>@inc.InclusionText</span>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="card profile col-12 mb-4">
                                <div class="card-header">
                                    <h4>Medias</h4>
                                </div>
                                <div class="card-body">
                                    @foreach (var pic in details.FieldtripPictures)
                                    {
                                        <div class="row mb-sm-6">
                                            <div class="col-sm-4 text-sm-left">
                                                <span>@pic.Image</span>
                                            </div>
                                            <div class="col-sm-6 text-sm">
                                                <span>@pic.Description</span>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-5 cardFB">
                        <div class="card border-0 d-flex">
                            <div class="card-header">
                                <h4>Participants</h4>
                                <div class="edit-info">
                                        <i class='bx bxs-edit-alt' data-toggle="modal" data-target="#editstatus"></i>
                                    </div>
                            </div>
                            <div class="card-body">
                                <table class="table table-hover table-borderless">
                                    <thead>
                                        <tr>
                                            <th>Participant No:</th>
                                            <th>Name:</th>
                                            <th>CheckInStatus:</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var part in parts)
                                        {
                                            <tr>
                                                <td>@part.ParticipantNo</td>
                                                <td>@part.MemberName</td>
                                                <td>@part.CheckInStatus</td>
                                            </tr>
                                        }
                                        <tr>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- edit Room -->
        <div id="editstatus" class="modal fade" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="content">
            <div class="modal-content modal-addRoom">
                <div class="modal-header">
                    <h4 class="modal-title">Edit Status</h4>
                </div>
                <form asp-action="StaffUpdateFieldTripDetail" asp-controller="Staff" method="post" asp-route-id="@details.TripId" class="form-group">
                    <div class="modal-body">
                        <div class="row justify-content-center">
                            <div class="col-12 col-md-8">
                                @foreach (var part in parts){
                                <label asp-for="@part.CheckInStatus" class="col-sm-4 col-form-label">CheckInStatus</label>
                                    <div class="col-sm-8">
                                        <input asp-for="@part.CheckInStatus" id="CheckInStatus" type="checkbox" name="CheckInStatus"
                                               value="@part.CheckInStatus" class="form-control" required>
                                    </div>
                                    }
                        </div>
                    </div>
                    <div class="modal-footer justify-content-center">
                        <button class="btn btn-success" type="submit" value="Update">Save</button>
                        <button class="btn btn-danger" type="button" data-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
        </div>
        
</body>
</html>
