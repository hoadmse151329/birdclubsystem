@model dynamic
@{
    Layout = null;
    ViewData["Title"] = "Staff Meeting Page";
    List<BAL.ViewModels.LocationViewModel> locationList = Model.Locations;
    List<BAL.ViewModels.FieldTripViewModel> fieldtripList = Model.FieldTrips;
    BAL.ViewModels.FieldTripViewModel createFieldTrip = new();
    BAL.ViewModels.FieldtripDaybyDayViewModel createFieldTripDayByDay = new();
    BAL.ViewModels.FieldTripAdditionalDetailViewModel createFieldTripRates = new();
    BAL.ViewModels.FieldtripMediaViewModel createFieldTripMedia = new();
    BAL.ViewModels.FieldtripInclusionViewModel createFieldTripInclsion = new();
    BAL.ViewModels.FieldtripGettingThereViewModel createFieldTripGettingthere = new();
    string? search = string.Empty;
        Layout = "~/Views/Shared/_SLayout.cshtml";
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS -->
    <link rel="stylesheet" href="~/css/owner-style.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
    <!--Boxicons-->
    <link rel='stylesheet' href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css'>
    <!-- Other-->
    <link rel="stylesheet" href="https://unpkg.com/filepond-plugin-file-poster/dist/filepond-plugin-file-poster.css" >
            <link rel="stylesheet" href="~/css/owl.carousel.min.css">
        <link rel="stylesheet" href="~/css/owl.theme.default.min.css">
        <!-- main CSS -->
        <link rel="stylesheet" href="~/css/main.css">
</head>
<body>
    <!-- sidebar -->
        <div class="sidebar">
        <div class="container">
            <div class="navigation">  
                <ul class="slide-menu">
                    <div class="logo">
                        <a href="@Url.Action("StaffIndex", "Staff")">
                            <img class="logo" src="~/images/Red_whiskered_bulbul_bird_logo_eps_10_generated 1.png" alt="logo">
                        </a>
                    </div>
                    <li class="active" data-toggle="tooltip"data-placement="right" title="Overview">
                        <a href="@Url.Action("StaffIndex", "Staff")">
                            <span><i class='bx bx-tachometer'></i></span>
                            <span class="title">Overview</span>
                        </a>
                    </li>
                    <li>
                        <a href="#" data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                            <i class='bx bx-bookmarks'></i>
                            <span class="title">Manage</span>
                            <i class='bx bxs-chevron-down drop'></i>
                        </a>
                        <ul class="collapse sub-menu" id="collapseOne">
                            <li data-toggle="tooltip"data-placement="right" title="Manage Meeting">
                                <a href="@Url.Action("StaffMeeting", "Staff")" li class="dropdown-item">
                                    <i class='bx bx-home-alt-2'></i>
                                    <span class="title">Meeting</span>
                                </a> 
                            </li>
                            <li data-toggle="tooltip"data-placement="right" title="Manage Fieldtrip">
                                <a href="@Url.Action("StaffFieldTrip", "Staff")" li class="dropdown-item">
                                    <i class='bx bx-calendar-edit'></i>
                                    <span class="title">Fieldtrip</span>
                                </a>
                            </li> 
                            <li data-toggle="tooltip"data-placement="right" title="Manage Bird Contest">
                                <a href="@Url.Action("StaffContest", "Staff")" li class="dropdown-item">
                                    <i class='bx bx-trophy'></i>
                                    <span class="title">Bird Contest</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                    </li>
                    <li data-toggle="tooltip"data-placement="right" title="Staff Profile">
                        <a href="@Url.Action("StaffProfile", "Staff")">
                            <span><i class='bx bx-user'></i></span>
                            <span class="title">Staff Profile</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- End sidebar -->

    <!-- Header -->
    <div class="header">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="toggle float-left">
                            <i class='bx bx-menu'></i>
                        </div>
                        <div class="float-left">
                            <div class="dashboard_bar d-flex">
                                Home
                            </div>
                        </div>
                        <div class="float-right">
                            <div class="btn-group me-1 mb-1">
                                <div class="dropdown">
                                    @if (TempData["ROLE_NAME"] != null)
                                    {
                                    <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        @TempData["USER_NAME"]
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <a class="dropdown-item" href="@Url.Action("StaffProfile", "Staff")"><i class='bx bx-user'></i>Staff Profile</a> <!--thêm theo user id và role-->
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="@Url.Action("Logout", "Auth")">Logout</a>
                                    </div>
                                    }
                                </div>  
                            </div>
                        </div>   
                    </div>
                </div>
            </div>
        </div>
    <!-- End header -->

    <!-- List club -->
    <div class="main-content">
        <div class="main">
            <div class="container-fluid">
                <div class="row">
                    <div class="offset-sm-6 col-sm-6  d-flex justify-content-sm-end p-md-0 mt-2 mt-sm-0 ">
                        <ol class="breadcrumb">
                            <li class="breadcrumd-item">
                                <a href="#">Manage</a>
                            </li>
                            <li class="breadcrumd-item">
                                <span>/</span>
                            </li>
                        </ol>
                    </div>
                </div>
                <section>
                    <div class="card">
                        <div class="card-body">
                            <!-- Nav tabs -->
                            <ul class="nav nav-tabs">
                                <!-- dung vong for o day -->
                                <li class="nav-item">
                                    <a class="nav-link active" data-toggle="tab" href="#home1">
                                        <i class='bx bx-home-alt-2'></i>
                                        <span>FieldTrip</span>
                                    </a>
                                </li>             
                            </ul>
                            
                            <!-- Tab panes -->
                            <div class="tab-content">
                                <!-- home1 -->
                                <div class="tab-pane active" id="home1" role="tabpanel">
                                    <div class="row search">
                                        <div class="col-sm-12 d-flex">
                                            <div class="col-sm-6 d-flex address-home">
                                                @{
                                                    if (ViewBag.error != null)
                                                    {
                                                        <span class="text-danger">@ViewBag.error</span>
                                                    }
                                                }
                                            </div>
                                            <div class="col-sm-6 d-flex justify-content-end">
                                                <form asp-action="StaffFieldTrip" asp-controller="Staff" method="get" asp-route-search="@search">
                                                    <div>
                                                        <label>
                                                            <input asp-for="@search" class="form-control" type="text" name="search" placeholder="Search..." value="@search">
                                                            <button class="bx bx-search-alt" type="submit"></button>
                                                            @*<i class='bx bx-search-alt'></i>*@
                                                        </label>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row card-content">
                                        <div class="col-xl-3 col-lg-6 col-sm-6 my-3 item">
                                            <div class="card card-child">
                                                <div class="card-body add-club">
                                                    <button class="border-0" data-toggle="modal"  data-target="#addFieldTrip">
                                                        <span>Add FieldTrip</span>
                                                        <i class='bx bx-add-to-queue'></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- dung vong for o day -->
                                        @foreach (var data in fieldtripList)
                                        {
                                            <div class="col-xl-3 col-lg-6 col-sm-6 my-3">
                                                <div class="card card-child">
                                                    <div class="club-name">
                                                        <span>FieldTrip</span>
                                                        <div class="status">
                                                            <!-- dùng lệnh if -->
                                                            @*<span class="stt1">Status:<h6>Processing</h6></span>*@
                                                            <span class="stt1">Status:<h6>@data.Status</h6></span>
                                                            <!-- <span class="stt2">Trạng thái:<h6>Done</h6></span>
                                                            <span class="stt3">Trạng thái:<h6>Cancle</h6></span>
                                                            <span class="stt3">Trạng thái:<h6>In debt</h6></span>-->
                                                        </div>
                                                    </div>
                                                    <div class="card-body">
                                                        <div class="club-title">
                                                            <ul>
                                                                <li>
                                                                    <h6>FieldTrip Name:</h6>
                                                                    <span>@data.TripName</span>
                                                                </li>
                                                                <li>
                                                                    <h6>Registration Deadlines:</h6>
                                                                    <span>@data.RegistrationDeadline.ToString("MM/dd/yyyy")</span>
                                                                </li>
                                                                <li>
                                                                    <h6>Start Date:</h6>
                                                                    <span>@data.StartDate.ToString("MM/dd/yyyy")</span>
                                                                </li>
                                                                <li>
                                                                    <h6>End Date:</h6>
                                                                    <span>@data.EndDate.ToString("MM/dd/yyyy")</span>
                                                                </li>
                                                                <li>
                                                                    <h6>Maximum Participants:</h6>
                                                                    <span>@data.NumberOfParticipantsLimit</span>
                                                                </li>
                                                                <li>
                                                                    <h6>Location:</h6>
                                                                    <span>@data.AreaNumber,@data.Street,@data.District,@data.City</span>
                                                                </li>
                                                                <li>
                                                                    <h6>Description:</h6>
                                                                    <span>@data.Description</span>
                                                                </li>
                                                                <li>
                                                                    <h6>Note:</h6>
                                                                    <span>@data.Note</span>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                    <div class="form-group mx-auto">
                                                        <form asp-action="FieldTrip" asp-controller="Staff" method="get" asp-route-id="@data.TripId">
                                                            <button class="btn btn-primary clickable-row" type="submit">See Detail</button>
                                                        </form>
                                                            <button class="btn btn-danger" data-toggle="modal" data-target="#deleteFieldTrip" type="submit">Cancel FieldTrip</button>
                                                    </div>
                                                </div>
                                            </div>
    <div id="deleteFieldTrip" class="modal fade" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="content">
            <div class="modal-content">
                <form action="#">
                    <div class="card-body">
                        <div class="del-title">
                            <i class='bx bx-error-circle'></i>
                            <h2>Are you sure want to delete ?</h2> 
                        </div>
                        <div class="del-submit d-flex justify-content-center">       
                            <form asp-action="StaffCancelFieldTrip" asp-controller="Staff" method="post" asp-route-id="@data.TripId">
                                <button type="submit" name="action" value="deleteFieldTrip" class="btn btn-success">Save</button>
                                </form>
                                <button class="btn btn-danger" type="button" data-dismiss="modal">Cancel</button>
                            </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
                                        }

                                </div>
                            </div>
                            <!-- end tapnet -->
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>

    <!-- add new Room -->
    <div id="addFieldTrip" class="modal fade" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
            <div class="modal-content modal-addRoom">
                <div class="modal-header">
                    <h4 class="modal-title">Add new FieldTrip</h4>
                </div>
                <div class="modal-body">
                    @*<form asp-action="StaffCreateFieldTrip" asp-controller="Staff" method="get" onsubmit="return submitFunc()" id="form">*@
                    <form asp-action="StaffCreateFieldTrip" asp-controller="Staff" method="post" id="form">
                        <div class="row p-4">
                            <div class="col-12">
                                 <div class="row form-group">
                                    <label asp-for="@createFieldTrip.TripName" class="col-md-3 col-form-label text-md-right">FieldTrip Name</label>
                                    <input asp-for="@createFieldTrip.TripName" value="@createFieldTrip.TripName" type="text" name="fieldtripname" placeholder="Meeting Name" required class="form-control col-md-7">
                                    <span asp-validation-for="@createFieldTrip.TripName" id="error_message"
                                          class="helper-text text-danger d-block offset-md-5 col-md-5 col-sm-8 mt-2"></span>
                                </div>
                                <div class="row form-group">
                                    <label class="col-md-3 col-form-label mt-2 text-md-right">Choose Picture</label>
                                    <input type="file" name="photo" class="form-control col-md-7 mt-2" accept="image/*">

                                    <label asp-for="@createFieldTrip.RegistrationDeadline" class="col-md-3 col-form-label mt-3 text-md-right">Registration Deadlines</label>
                                    <input asp-for="@createFieldTrip.RegistrationDeadline" value="@createFieldTrip.RegistrationDeadline" type="datetime-local" name="registrationDeadline" required class="form-control col-md-7 mt-3">
                                    <span asp-validation-for="@createFieldTrip.RegistrationDeadline" id="error_message"
                                          class="helper-text text-danger d-block offset-md-5 col-md-5 col-sm-8 mt-2"></span>

                                    <label asp-for="@createFieldTrip.StartDate" class="col-md-3 col-form-label mt-3 text-md-right">Start Date</label>
                                    <input asp-for="@createFieldTrip.StartDate" value="@createFieldTrip.StartDate" type="datetime-local" name="startDate" required class="form-control col-md-7 mt-3">
                                    <span asp-validation-for="@createFieldTrip.StartDate" id="error_message"
                                            class="helper-text text-danger d-block offset-md-5 col-md-5 col-sm-8 mt-2"></span>

                                    <label asp-for="@createFieldTrip.EndDate" class="col-md-3 col-form-label mt-3 text-md-right">End Date</label>
                                    <input asp-for="@createFieldTrip.EndDate" value="@createFieldTrip.EndDate" type="datetime-local" name="endDate" required class="form-control col-md-7 mt-3">
                                    <span asp-validation-for="@createFieldTrip.EndDate" id="error_message"
                                              class="helper-text text-danger d-block offset-md-5 col-md-5 col-sm-8 mt-2"></span>

                                    <label asp-for="@createFieldTrip.NumberOfParticipants"  class="col-md-3 col-form-label mt-3 text-md-right">Number of Participants</label>
                                    <input asp-for="@createFieldTrip.NumberOfParticipants" value="@createFieldTrip.NumberOfParticipants" type="number" name="numberOfParticipants" class="form-control col-md-7 mt-3" required>
                                    <span asp-validation-for="@createFieldTrip.NumberOfParticipants" id="error_message"
                                              class="helper-text text-danger d-block offset-md-5 col-md-5 col-sm-8 mt-2"></span>

                                    <label asp-for="@createFieldTrip.Host" class="col-md-3 col-form-label mt-3 text-md-right">Host</label>
                                    <input asp-for="@createFieldTrip.Host" value="@createFieldTrip.Host" type="text" name="host" placeholder="Meeting Host" class="form-control col-md-7 mt-3" rows="3" required>
                                    <span asp-validation-for="@createFieldTrip.Host" id="error_message"
                                              class="helper-text text-danger d-block offset-md-5 col-md-5 col-sm-8 mt-2"></span>

                                    <label asp-for="@createFieldTrip.InCharge" class="col-md-3 col-form-label mt-3 text-md-right">Incharge</label>
                                    <input asp-for="@createFieldTrip.InCharge" value="@createFieldTrip.InCharge" type="text" name="incharge" placeholder="Staff incharge of Meeting" class="form-control col-md-7 mt-3" rows="3" required>
                                    <span asp-validation-for="@createFieldTrip.InCharge" id="error_message"
                                              class="helper-text text-danger d-block offset-md-5 col-md-5 col-sm-8 mt-2"></span>

                                    <label asp-for="@createFieldTrip.Address" class="col-md-3 col-form-label mt-3 text-md-right">Address</label>
                                    <textarea asp-for="@createFieldTrip.Address" value="@createFieldTrip.Address" type="text" name="address" placeholder="Meeting Address..." class="form-control col-md-7 mt-3" rows="3" required></textarea>
                                    <span asp-validation-for="@createFieldTrip.Address" id="error_message"
                                              class="helper-text text-danger d-block offset-md-5 col-md-5 col-sm-8 mt-2"></span>

                                    <label asp-for="@createFieldTrip.Description" class="col-md-3 col-form-label mt-3 text-md-right">Description</label>
                                    <textarea asp-for="@createFieldTrip.Description" value="@createFieldTrip.Description" type="text" name="description" placeholder="Meeting description..." class="form-control col-md-7 mt-3" rows="3" required></textarea>
                                    <span asp-validation-for="@createFieldTrip.Description" id="error_message"
                                              class="helper-text text-danger d-block offset-md-5 col-md-5 col-sm-8 mt-2"></span>

                                    <label asp-for="@createFieldTrip.Note" class="col-md-3 col-form-label mt-3 text-md-right">Note</label>
                                    <textarea asp-for="@createFieldTrip.Note" value="@createFieldTrip.Note" type="text" name="note" placeholder="Meeting Note..." class="form-control col-md-7 mt-3" rows="3" required></textarea>
                                    <span asp-validation-for="@createFieldTrip.Note" id="error_message"
                                          class="helper-text text-danger d-block offset-md-5 col-md-5 col-sm-8 mt-2"></span>

                                    <label asp-for="@createFieldTripGettingthere.GettingThereAccommodation" class="col-md-3 col-form-label mt-3 text-md-right">GettingThereAccommodation</label>
                                    <textarea asp-for="@createFieldTripGettingthere.GettingThereAccommodation" value="@createFieldTripGettingthere.GettingThereAccommodation" type="text" name="gettingtheretext" placeholder="GettingThereAccommodation..." class="form-control col-md-7 mt-3" rows="3" required></textarea>
                                    <span asp-validation-for="@createFieldTripGettingthere.GettingThereAccommodation" id="error_message"
                                          class="helper-text text-danger d-block offset-md-5 col-md-5 col-sm-8 mt-2"></span>

                                    <label asp-for="@createFieldTripDayByDay.Description" class="col-md-3 col-form-label mt-3 text-md-right">Description</label>
                                    <textarea asp-for="@createFieldTripDayByDay.Description" value="@createFieldTripDayByDay.Description" type="text" name="description" placeholder="Description..." class="form-control col-md-7 mt-3" rows="3" required></textarea>
                                    <span asp-validation-for="@createFieldTripDayByDay.Description" id="error_message"
                                          class="helper-text text-danger d-block offset-md-5 col-md-5 col-sm-8 mt-2"></span>

                                    <label asp-for="@createFieldTripDayByDay.Day" class="col-md-3 col-form-label mt-3 text-md-right">Day</label>
                                    <textarea asp-for="@createFieldTripDayByDay.Day" value="@createFieldTripDayByDay.Day" type="datetime-local" name="day" required class="form-control col-md-7 mt-3"></textarea>
                                    <span asp-validation-for="@createFieldTripDayByDay.Day" id="error_message"
                                          class="helper-text text-danger d-block offset-md-5 col-md-5 col-sm-8 mt-2"></span>

                                    <label asp-for="@createFieldTripInclsion.Title" class="col-md-3 col-form-label mt-3 text-md-right">Title</label>
                                    <textarea asp-for="@createFieldTripInclsion.Title" value="@createFieldTripInclsion.Title" type="text" name="title" placeholder="Title..." class="form-control col-md-7 mt-3" rows="3" required></textarea>
                                    <span asp-validation-for="@createFieldTripInclsion.Title" id="error_message"
                                          class="helper-text text-danger d-block offset-md-5 col-md-5 col-sm-8 mt-2"></span>

                                    <label asp-for="@createFieldTripInclsion.Type" class="col-md-3 col-form-label mt-3 text-md-right">Type</label>
                                    <textarea asp-for="@createFieldTripInclsion.Type" value="@createFieldTripInclsion.Type" type="text" name="type" placeholder="Type..." class="form-control col-md-7 mt-3" rows="3" required></textarea>
                                    <span asp-validation-for="@createFieldTripInclsion.Type" id="error_message"
                                          class="helper-text text-danger d-block offset-md-5 col-md-5 col-sm-8 mt-2"></span>

                                    <label asp-for="@createFieldTripInclsion.InclusionText" class="col-md-3 col-form-label mt-3 text-md-right">Inclusion Text</label>
                                    <textarea asp-for="@createFieldTripInclsion.InclusionText" value="@createFieldTripInclsion.InclusionText" type="text" name="inclusiontext" placeholder="Inclusion Text..." class="form-control col-md-7 mt-3" rows="3" required></textarea>
                                    <span asp-validation-for="@createFieldTripInclsion.InclusionText" id="error_message"
                                          class="helper-text text-danger d-block offset-md-5 col-md-5 col-sm-8 mt-2"></span>

                                    <label class="col-md-3 col-form-label mt-2 text-md-right">Choose Media Picture</label>
                                    <input type="file" name="mediaphoto" class="form-control col-md-7 mt-2" accept="image/*">

                                    <label asp-for="@createFieldTripMedia.Description" class="col-md-3 col-form-label mt-3 text-md-right">Media Description</label>
                                    <textarea asp-for="@createFieldTripMedia.Description" value="@createFieldTripMedia.Description" type="text" name="description" placeholder="Media Description..." class="form-control col-md-7 mt-3" rows="3" required></textarea>
                                    <span asp-validation-for="@createFieldTripMedia.Description" id="error_message"
                                          class="helper-text text-danger d-block offset-md-5 col-md-5 col-sm-8 mt-2"></span>

                                </div> 
                            </div>                
                            <div class="modal-footer justify-content-center">
                                <button class="btn btn-success" type="submit" name="action" value="createRoom" >Save</button>
                                <button class="btn btn-danger" type="button" data-dismiss="modal">Cancel</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script>
    function redirectToDetailPage() {
        window.location.href = '@Url.Action("StaffFieldTripDetail", "Staff")';
    }
</script>
</body>
</html>