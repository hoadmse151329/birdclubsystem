                        </div>
                        <div class="d-flex justify-content-between">
                            <p class="club-price">
                                <i class="fas fa-calendar"></i>
                                From @data.StartDate.Value.ToString("MM/dd/yyyy")
                                to @data.EndDate.Value.ToString("MM/dd/yyyy")
                            </p>
                            <button class="button--primary">
                                <a class="text-decoration-none text-white"
                               href="@Url.Action("FieldTripPost", "FieldTrip",new {id = data.TripId})">See More</a>
                            </button>
                        </div>
                    </div>
                }
            </div>
            <div class="d-flex justify-content-between align-items-center">
            <h5><i class="fa fa-sort-amount-down"></i> Bird Contests</h5>
            <a href="@Url.Action("Index","Meeting")"> See All <i class="fa fa-angle-right"></i></a></div>
            <div class="ratingList-carousel owl-carousel owl-theme">
                @foreach (var data in contestList)
                {
                    <div class="club-item">
                        <a href="#" class="club-image">
                            <img class="img-fluid" src="~/images/meeting.png" alt="nt1">
                        </a>
                        <div class="club-title">
                            <div class="d-flex justify-content-between">
                            <a href="@Url.Action("ContestPost", "Contest",new {id = data.ContestId})" class="text-decoration-none">@data.ContestName</a>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between">
                                <p class="club-price"><i class="fas fa-calendar"></i> 
                                    From @data.StartDate.Value.ToString("MM/dd/yyyy") 
                                    to @data.EndDate.Value.ToString("MM/dd/yyyy")</p>
                            <button class="button--primary"><a class="text-decoration-none text-white"
                                href="@Url.Action("ContestPost", "Contest",new {id = data.ContestId})">See More</a></button>
                        </div>
                    </div>
                }
            </div>
        </div>
