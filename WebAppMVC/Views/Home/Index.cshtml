@model WebAppMVC.Models.ViewModels.GuestIndexVM
@{
    ViewData["Title"] = "Home Page";
    List<BAL.ViewModels.FieldTripViewModel> fieldtripList = Model.FieldTrips;
    List<BAL.ViewModels.MeetingViewModel> meetingList = Model.Meetings;
    List<BAL.ViewModels.ContestViewModel> contestList = Model.Contests;
}

<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chao Mao Bird Club</title>
    <link rel="stylesheet" href="~/css/Index.css">
</head>
<body class="background">

    <section class="infor">
        <div class="background-infor">
            <div id="carouselBanner" class="carousel slide">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="@Model.Banners[0].ToString()" class="d-block w-100" alt="cover-1">
                    </div>
                    <div class="carousel-item">
                        <img src="@Model.Banners[1].ToString()" class="d-block w-100" alt="cover-2">
                    </div>
                    <div class="carousel-item">
                        <img src="@Model.Banners[2].ToString()" class="d-block w-100" alt="cover-3">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselBanner" role="button" data-slide="prev">
                    <i class="fa fa-circle-left" aria-hidden="true"></i>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselBanner" role="button" data-slide="next">
                    <i class="fa fa-circle-right" aria-hidden="true"></i>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="infor__content container">
            <div class="row">
                <div class="col-12 col-md-4  d-flex my-5">
                    <div class="image">
                        <img src="@Model.Features[0].Image.ToString()" alt="best-choice">
                    </div>
                    <div class="content">
                        <h4 style="color:black">@Model.Features[0].Title</h4>
                        <p style="color:black">@Model.Features[0].Description</p>
                    </div>
                </div>
                <div class="col-12 col-md-4 d-flex my-5">
                    <div class="image">
                        <img src="@Model.Features[1].Image.ToString()" alt="security">
                    </div>
                    <div class="content">
                        <h4 style="color:black">@Model.Features[1].Title</h4>
                        <p style="color:black">@Model.Features[1].Description</p>
                    </div>
                </div>
                <div class="col-12 col-md-4 d-flex  my-5">
                    <div class="image">
                        <img src="@Model.Features[2].Image.ToString()" alt="img3">
                    </div>
                    <div class="content">
                        <h4 style="color:black">@Model.Features[2].Title</h4>
                        <p style="color:black">@Model.Features[2].Description</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="main-container">
        <span class="text">@Model.WelcomeMess.Part1</span><span class="text-2">@Model.WelcomeMess.Part2</span><span class="text-4">@Model.WelcomeMess.Part3</span>
        <div class="group">
            <div class="group-content">
                <span class="text-5">
                    @Model.About.Founder
                </span>
                <div class="img-2"></div>
                <div class="section"><a class="text-6" href="@Url.Action("login", "Auth")">Join Now!</a></div>
            </div>
        </div>
    </section>
    <section class="club container spacing" style="background-color:white">
        <div class="d-flex justify-content-between align-items-center">
            <h3 class="heading"><i class="fa fa-newspaper"></i> Latest News</h3>
        </div>
        <div class="club__content">
            <div class="d-flex justify-content-between align-items-center">
                <h5><i class="fa fa-sort-amount-down"></i> Meetings</h5>
                <a href="@Url.Action("Index","Meeting")" class="font-a"> See All <i class="fa fa-angle-right"></i></a>
            </div>
            <div class="famousList-carousel owl-carousel owl-theme">
                @foreach (var data in meetingList)
                {
                    <div class="club-item">
                        <a href="#" class="club-image">
                            @{
                                if (data.SpotlightImage != null)
                                {
                                    <img class="img-fluid" src="@data.SpotlightImage.Image" alt="nt1">
                                }
                                else
                                {
                                    <img class="img-fluid" src="~/images/meeting.png" alt="nt1">
                                }
                            }
                        </a>
                        <div class="club-title">
                            <div class="d-flex justify-content-between">
                                <a href="@Url.Action("MeetingPost", "Meeting",new {id = data.MeetingId})" class="text-decoration-none truncate">@data.MeetingName</a>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <p class="club-price">
                                <i class="fas fa-calendar"></i>
                                From @data.StartDate.ToString("dd/MM/yyyy")
                                to @data.EndDate.ToString("dd/MM/yyyy")
                            </p>
                            <button class="button--primary">
                                <a class="text-decoration-none text-black"
                                   href="@Url.Action("MeetingPost", "Meeting",new {id = data.MeetingId})">See More</a>
                            </button>
                        </div>
                    </div>
                }
            </div>
            <div class="d-flex justify-content-between align-items-center">
                <h5><i class="fa fa-sort-amount-down"></i> Field Trips</h5>
                <a href="@Url.Action("Index","FieldTrip")" class="font-a"> See All <i class="fa fa-angle-right"></i></a>
            </div>
            <div class="ratingList-carousel owl-carousel owl-theme">
                @foreach (var data in fieldtripList)
                {
                    <div class="club-item">
                        <a href="#" class="club-image">
                            @{
                                if (data.SpotlightImage != null)
                                {
                                    <img class="img-fluid" src="@data.SpotlightImage.Image" alt="nt1">
                                }
                                else
                                {
                                    <img class="img-fluid" src="~/images/fieldtrip.png" alt="nt1">
                                }
                            }
                        </a>
                        <div class="club-title">
                            <div class="d-flex justify-content-between">
                                <a href="@Url.Action("FieldTripPost", "FieldTrip",new {id = data.TripId})" class="text-decoration-none truncate">@data.TripName</a>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <p class="club-price">
                                <i class="fas fa-calendar"></i>
                                From @data.StartDate.ToString("dd/MM/yyyy")
                                to @data.EndDate.ToString("dd/MM/yyyy")
                            </p>
                            <button class="button--primary">
                                <a class="text-decoration-none text-black"
                                   href="@Url.Action("FieldTripPost", "FieldTrip",new {id = data.TripId})">See More</a>
                            </button>
                        </div>
                    </div>
                }
            </div>
            <div class="d-flex justify-content-between align-items-center">
                <h5><i class="fa fa-sort-amount-down"></i> Bird Contests</h5>
                <a href="@Url.Action("Index","Contest")" class="font-a"> See All <i class="fa fa-angle-right"></i></a>
            </div>
            <div class="ratingList-carousel owl-carousel owl-theme">
                @foreach (var data in contestList)
                {
                    <div class="club-item">
                        <a href="#" class="club-image">
                            @{
                                if (data.SpotlightImage != null)
                                {
                                    <img class="img-fluid" src="@data.SpotlightImage.Image" alt="nt1">
                                }
                                else
                                {
                                    <img class="img-fluid" src="~/images/contest.png" alt="nt1">
                                }
                            }
                        </a>
                        <div class="club-title">
                            <div class="d-flex justify-content-between">
                                <a href="@Url.Action("ContestPost", "Contest",new {id = data.ContestId})" class="text-decoration-none truncate">@data.ContestName</a>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <p class="club-price">
                                <i class="fas fa-calendar"></i>
                                From @data.StartDate.ToString("dd/MM/yyyy")
                                to @data.EndDate.ToString("dd/MM/yyyy")
                            </p>
                            <button class="button--primary">
                                <a class="text-decoration-none text-black"
                                   href="@Url.Action("ContestPost", "Contest",new {id = data.ContestId})">See More</a>
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <hr class="container my-0" />
    <!-- SERVICES -->
    <section id="services" class="services spacing">
        <div class="container px-0" style="background-color:white">
            <h3 class="heading"><i class="fa fa-concierge-bell"></i>Service</h3>
            <div class="row">
                <div class="offset-1 col-4 service-item">
                    <i class="@Model.Services[0].Icon"></i>
                    <h5>Account<span>@Model.Services[0].Title</span></h5>
                    <p class="p-font">@Model.Services[0].Description</p>
                </div>
                <div class="offset-2 col-4 service-item">
                    <i class="@Model.Services[1].Icon"></i>
                    <h5>Account<span>@Model.Services[1].Title</span></h5>
                    <p class="p-font">@Model.Services[1].Description</p>
                </div>
            </div>
        </div>
    </section>
    <hr class="container my-0" />
    <section id="aboutUs" class="about-us container px-0 spacing">
        <h3 class="heading" style="background-color:white"><i class="fa fa-id-card"></i> @Model.About.Heading</h3>
        <div class="row">
            <div class="col-6 card intro-desc">
                <div class="intro-title d-flex">
                    <img class="img-fluid" src="~/images/bird.png" alt="logo" />
                    <p class="card-text my-3">
                        @Model.About.Description
                        <span class="text-center d-block">@Model.About.ShortName</span>
                        <span class="d-block text-center">
                            @Model.About.Founder
                        </span>
                    </p>
                </div>

                <div class="card-text">
                    @Model.About.Mission
                </div>
            </div>
            <div class="col-6 intro-img" style="background-image: @Model.About.Image" alt="cover-1"></div>
        </div>
    </section>
    <hr class="container my-0" />
