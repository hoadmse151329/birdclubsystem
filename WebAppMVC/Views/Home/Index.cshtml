        </section>
        <section class="club container spacing" style="background-color:white">
        <div class="d-flex justify-content-between align-items-center">
            <h3 class="heading"><i class="fa fa-newspaper"></i> Latest News</h3>
        </div>        
        <div class="club__content">
            <div class="d-flex justify-content-between align-items-center">
            <h5><i class="fa fa-sort-amount-down"></i> Meetings</h5>
            <a class="view-motel-list" href="@Url.Action("Index","Meeting")"> See All <i class="fa fa-angle-right"></i></a></div>
            <div class="famousList-carousel owl-carousel owl-theme">
                @foreach (var data in meetingList)
                {
                        <div class="club-item">
                            <a href="#" class="club-image">
                                <img class="img-fluid" src="~/images/meeting.png" alt="nt1">
                            </a>
                            <div class="club-title">
                                <div class="d-flex justify-content-between">
                                <a href="@Url.Action("MeetingPost", "Meeting",new {id = data.MeetingId})" class="text-decoration-none">@data.MeetingName</a>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between">
                                    <p class="club-price"><i class="fas fa-calendar"></i> 
                                        From @data.StartDate.Value.ToString("MM/dd/yyyy") 
                                        to @data.EndDate.Value.ToString("MM/dd/yyyy")</p>
                                <button class="button--primary"><a class="text-decoration-none text-white"
                                        href="@Url.Action("MeetingPost", "Meeting",new {id = data.MeetingId})">See More</a></button>
                            </div>
                        </div>
                }
            </div>
            <div class="d-flex justify-content-between align-items-center">
            <h5><i class="fa fa-sort-amount-down"></i> Field Trips</h5>
            <a href="@Url.Action("Index", "FieldTrip")"> See All <i class="fa fa-angle-right"></i></a></div>
            <div class="ratingList-carousel owl-carousel owl-theme">
                @foreach (var data in fieldtripList)
