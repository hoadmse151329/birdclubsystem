    <script>
        $(".carousel").carousel({
            interval: 3000,
        });
    </script>
    <!-- owl carousels -->
    <script src="~/js/owl.carousel.min.js"></script>
    <script>
        $(".famousList-carousel").owlCarousel({
            loop: true,
            margin: 10,
